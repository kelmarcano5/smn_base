<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnauxiliar.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_auxiliary}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_auxiliary}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_clase_auxiliar_rf' title='${lbl:b_class_auxiliary}'   align='left' />
			<col name='aux_tipo_persona' title='${lbl:b_person_type}'  align='left' />
			<col name='aux_apellidos' title='${lbl:b_last_name}'  align='left' />
			<col name='aux_nombres' title='${lbl:b_first_name}'  align='left' />
			<col name='aux_tipo_doc_oficial_rf' title='${lbl:b_document_type_oficial}'   align='left' />
			<col name='aux_num_doc_oficial' title='${lbl:b_document_number_oficial}'  align='left' />

		</record>
		<record recordset='query-smnauxiliar.sql' width='100' spacingBefore='10'>
			<col name='smn_naturaleza_auxiliar_rf' title='${lbl:b_nature_auxiliary}' width='10' align='left'  />
			<col name='smn_clase_auxiliar_rf' title='${lbl:b_class_auxiliary}' width='10' align='left'  />
			<col name='aux_tipo_persona' title='${lbl:b_person_type}' width='10' align='left' />
			<col name='aux_codigo' title='${lbl:b_code}' width='10' align='left' />
			<col name='aux_descripcion' title='${lbl:b_description}' width='10' align='left' />
			<col name='aux_apellidos' title='${lbl:b_last_name}' width='10' align='left' />
			<col name='aux_nombres' title='${lbl:b_first_name}' width='10' align='left' />
			<col name='tdo_descripcion' title='${lbl:b_document_type_oficial}' width='10' align='left'  />
			<col name='aux_num_doc_oficial' title='${lbl:b_document_number_oficial}' width='10' align='left' />
			<col name='aux_fecha_registro' title='${lbl:b_store_date}' width='10' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
