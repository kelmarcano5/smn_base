<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Actualiza valores de un formulario en una tabla
	</summary>

	<log>false</log>

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>prf_codigo</colname>
			<colname>prf_descripcion</colname>
			<colname>prf_tipo_acceso</colname>
			<colname>prf_add</colname>
			<colname>prf_del</colname>
			<colname>prf_edit</colname>
			<colname>prf_view</colname>
			<colname>prf_export</colname>
			<colname>prf_find</colname>
			<colname>prf_import</colname>
		
		</cols>
		<table>smn_base.smn_perfil</table>
		<oper>ACTUALIZAR</oper>
		<area>Carga de datos</area>
		<!--
			query para obtener el ID generado o nombre de 
			la columna que contiene el pkey, si es query, 
			el alias del campo debe ser "id"
		-->
		<pkey>id</pkey>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableTransaction</classname>
		<validator>true</validator>
		<transaction>true</transaction>
		<jdbc-log>false</jdbc-log>
		<!-- <recordset id="query-smn_service.sql" source="sql" scope="transaction" /> -->
		<recordset id="query-smn_usuarios_id.sql" source="request" scope="transaction" />
		<!-- <recordset id="query-smn_usuarios_id.sql" source="request" scope="transaction"/> -->
	</transaction>

	<query>update.sql</query>
	<query>delete-query-smn_service_id.sql</query>
	<!-- <query params="query-smn_service.sql">insert-rel_servicio.sql</query> -->
	<query params="query-smn_usuarios_id.sql">insert-query-smn_rel_perfil_usuarios.sql</query>
	<!-- <query params="query-smn_usuarios_id.sql">insert-rol.sql</query> --> 

	<output>
		<classname>dinamica.GenericOutput</classname>
		<template>script.js</template>
		<set-http-headers>true</set-http-headers>
		<content-type>text/javascript; charset=iso-8859-1</content-type>
		<expiration>0</expiration>
	</output>

</config>
