<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnperfil.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_profile}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_profile}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='role_id_name' title='${lbl:b_role}'  align='left' />
			<col name='service_id_name' title='${lbl:b_service}'  align='left' />
			<col name='prf_tipo_acceso' title='${lbl:b_type_access}'   align='left' />
			<col name='prf_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='prf_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnperfil.sql' width='100' spacingBefore='10'>
			<col name='description' title='${lbl:b_role}' width='9' align='left'  />
			<col name='description1' title='${lbl:b_service}' width='9' align='left'  />
			<col name='prf_tipo_acceso' title='${lbl:b_type_access}' width='9' align='left'  />
			<col name='prf_add' title='${lbl:b_add}' width='9' align='left' />
			<col name='prf_del' title='${lbl:b_delete}' width='9' align='left' />
			<col name='prf_edit' title='${lbl:b_modify}' width='9' align='left' />
			<col name='prf_view' title='${lbl:b_view}' width='9' align='left' />
			<col name='prf_export' title='${lbl:b_export}' width='9' align='left' />
			<col name='prf_find' title='${lbl:b_find}' width='9' align='left' />
			<col name='prf_import' title='${lbl:b_import}' width='9' align='left' />
			<col name='prf_fecha_registro' title='${lbl:b_store_date}' width='9' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
