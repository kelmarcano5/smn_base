<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_profile}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_profile}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_profile}' width='60' spacingBefore='40'>
			<col name='description' title='${lbl:b_role}' align='left'  />
			<col name='description1' title='${lbl:b_service}' align='left'  />
			<col name='prf_tipo_acceso' title='${lbl:b_type_access}' align='left'  />
			<col name='prf_add' title='${lbl:b_add}' align='left' />
			<col name='prf_del' title='${lbl:b_delete}' align='left' />
			<col name='prf_edit' title='${lbl:b_modify}' align='left' />
			<col name='prf_view' title='${lbl:b_view}' align='left' />
			<col name='prf_export' title='${lbl:b_export}' align='left' />
			<col name='prf_find' title='${lbl:b_find}' align='left' />
			<col name='prf_import' title='${lbl:b_import}' align='left' />
			<col name='prf_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
