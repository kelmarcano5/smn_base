<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='trg_codigo' type='varchar' required='true' maxlen='16'/>
	<parameter id='trg_descripcion' type='varchar' required='true' maxlen='64'/>


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_code_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='trg_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_desc_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='trg_descripcion'/>

</validator>
