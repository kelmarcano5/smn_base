<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncontactos.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_contacts}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='cnt_nombres' title='${lbl:s_profile_fname}'  align='center' />
			<col name='cnt_apellidos' title='${lbl:s_profile_lname}'  align='center' />
			<col name='smn_auxiliar_id' title='${lbl:b_auxiliary}'  format='######' align='center' />
			<col name='cnt_fecha_registro' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='center' />
			<col name='cnt_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='center' />
			<col name='cnt_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='center' />
		</record>
		<table recordset='query-smncontactos.sql' width='100' spacingBefore='10'>
			<col name='cnt_nombres' title='${lbl:s_profile_fname}' width='9' align='left' />
			<col name='cnt_apellidos' title='${lbl:s_profile_lname}' width='9' align='left' />
			<col name='cnt_email' title='${lbl:s_profile_email}' width='9' align='left' />
			<col name='smn_auxiliar_id_combo' title='${lbl:b_auxiliary}' width='9' align='center' format='######' />
			<col name='smn_clase_auxiliar_rf_combo' title='${lbl:b_auxiliary_classes}' width='9' align='center' format='######' />
			<col name='smn_tipo_contactos_rf_combo' title='${lbl:b_type_contacts}' width='9' align='center' format='######' />
			<col name='cnt_descripcion' title='${lbl:b_description}' width='9' align='left' />
			<col name='smn_tipo_contactos_rf1_combo' title='${lbl:b_type_contacts}' width='9' align='center' format='######' />
			<col name='cnt_descripcion1' title='${lbl:b_description}' width='9' align='left' />
			<col name='cnt_fecha_registro' title='${lbl:b_store_date}' width='9' align='center' format='dd-MM-yyyy' />
			<col name='cnt_telefono_contacto' title='${lbl:b_phone}' width='9' align='left' />
		</table>

	</pdf-report>
</config>