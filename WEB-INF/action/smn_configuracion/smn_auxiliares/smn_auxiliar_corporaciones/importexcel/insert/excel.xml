<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='tcp_codigo' type='varchar' required='true' maxlen='16'/>
	<parameter id='tcp_nombre' type='varchar' required='true' maxlen='48'/>
	<parameter id='tcp_auxiliar_unidad_negocio_desc' type='varchar' required='false' maxlen='48'/>
	<parameter id='tcp_moneda_desc' type='varchar' required='true' maxlen='48'/>
	<parameter id='tcp_direccion_desc' type='varchar' required='true' maxlen='48'/>

	<parameter id='tcp_auxiliar_unidad_negocio_ref' type='integer' required='false' maxlen='10'/>
	<parameter id='tcp_moneda_ref' type='integer' required='false' maxlen='10'/>
	<parameter id='tcp_direccion_ref' type='integer' required='false' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='tcp_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='tcp_nombre'/>


	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: tcp_auxiliar_unidad_negocio' 
		parameter='tcp_auxiliar_unidad_negocio_ref' 
		sql='tcp_auxiliar_unidad_negocio.sql' 
		id='tcp_auxiliar_unidad_negocio_ref'/>

	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: tcp_moneda' 
		parameter='tcp_moneda_ref' 
		sql='tcp_moneda.sql' 
		id='tcp_moneda_ref'/>

	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: tcp_direccion' 
		parameter='tcp_direccion_ref' 
		sql='tcp_direccion.sql' 
		id='tcp_direccion_ref'/>

</validator>
