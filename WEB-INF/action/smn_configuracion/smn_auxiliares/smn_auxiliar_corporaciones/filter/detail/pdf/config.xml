<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_corporations}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_corporations}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_corporations}' width='60' spacingBefore='40'>
			<col name='tcp_codigo' title='${lbl:b_code}' align='left' />
			<col name='tcp_nombre' title='${lbl:b_name}' align='left' />
			<col name='tun_nombre' title='${lbl:b_outsourced_unit_business}' align='left'  />
			<col name='mon_nombre' title='${lbl:b_coin}' align='left'  />
			<col name='dir_descripcion' title='${lbl:b_address}' align='left'  />
			<col name='tcp_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
