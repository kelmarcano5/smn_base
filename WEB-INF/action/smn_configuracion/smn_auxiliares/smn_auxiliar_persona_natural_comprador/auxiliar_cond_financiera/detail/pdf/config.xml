<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_financial_condition}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_financial_condition}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_financial_condition}' width='60' spacingBefore='40'>
			<col name='cfn_codigo' title='${lbl:b_code}' align='left' />
			<col name='cfn_descripcion' title='${lbl:b_description}' align='left' />
			<col name='cla_nombre' title='${lbl:b_auxiliary_class}' align='left'  />
			<col name='smn_item' title='${lbl:b_auxiliary}' align='left'  />
			<col name='cfn_limite_credito' title='${lbl:b_credit_limit}' align='left' format='#,###,##0.00' />
			<col name='cfn_porc_exceso_limite' title='${lbl:b_percent_excess_credit_limit}' align='left' format='#,###,##0.00' />
			<col name='cfn_valida_saldos_vec_combo' title='${lbl:b_percent_excess_credit_limit}' align='left' />
			<col name='cfn_dias_adic_saldos_venc' title='${lbl:b_validates_overcome_balances}' align='left'  />
			<col name='cfn_num_cheques_devuel' title='${lbl:b_number_returned_checks}' align='left'  />
			<col name='cfn_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
