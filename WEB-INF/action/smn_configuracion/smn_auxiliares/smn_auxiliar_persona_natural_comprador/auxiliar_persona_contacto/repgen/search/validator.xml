<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_clase_auxiliar_rf' type='integer' required='false' label='${lbl:b_class_auxiliary}' maxlen='10'/>
	<parameter id='smn_auxiliar_rf' type='integer' required='false' label='${lbl:b_auxiliary}' maxlen='10'/>
	<parameter id='apc_apellidos' type='varchar' required='false' label='${lbl:s_profile_lname}' maxlen='64'/>
	<parameter id='apc_nombres' type='varchar' required='false' label='${lbl:s_profile_fname}' maxlen='64'/>
	<parameter id='apc_telefono_contacto' type='varchar' required='false' label='${lbl:b_phone}' maxlen='64'/>
	<parameter id='apc_email' type='varchar' required='false' label='${lbl:b_email}' maxlen='100'/>
	<parameter id='apc_direccion' type='varchar' required='false' label='${lbl:b_address}' maxlen='250'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='apc_apellidos'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='apc_nombres'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='apc_telefono_contacto'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='apc_email'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='apc_direccion'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='apc_nombres'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
