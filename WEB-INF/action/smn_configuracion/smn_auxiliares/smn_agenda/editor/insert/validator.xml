<?xml version='1.0' encoding='ISO-8859-1'?>
<validator onerror='/action/error/validation/ajax'>
	<parameter id='age_codigo' type='varchar' required='true' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='age_descripcion' type='varchar' required='true' label='${lbl:b_description}' maxlen='48'/>
	<parameter id='age_dia_semana' type='varchar' required='true' label='${lbl:b_weekday}' maxlen='2'/>
	<parameter id='age_dia_semana_en' type='varchar' required='true' label='${lbl:b_weekday}' maxlen='3'/>
	<parameter id='age_hora_desde' type='varchar' required='true' label='${lbl:b_time_since}' maxlen='5' regexp="^(1[0-2]|0[1-9]):[0-5][0-9]$" regexp-error-label="${lbl:b_error_incorrect_format_time}" />
	<parameter id='age_jornada_desde' type='varchar' required='true' label='${lbl:b_working_day}' maxlen='2'/>
	<parameter id='age_hora_hasta' type='varchar' required='true' label='${lbl:b_time_until}' maxlen='5' regexp="^(1[0-2]|0[1-9]):[0-5][0-9]$" regexp-error-label="${lbl:b_error_incorrect_format_time}" />
	<parameter id='age_jornada_hasta' type='varchar' required='true' label='${lbl:b_working_day}' maxlen='2'/>
	<parameter id='age_localidad' type='varchar' required='false' label='${lbl:b_location}' maxlen='56'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='age_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='age_descripcion'/>


</validator>
