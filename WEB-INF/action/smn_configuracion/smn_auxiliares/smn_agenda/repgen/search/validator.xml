<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='age_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='age_descripcion' type='varchar' required='false' label='${lbl:b_description}' maxlen='48'/>
	<parameter id='age_dia_semana' type='varchar' required='false' label='${lbl:b_weekday}' maxlen='2'/>
	<parameter id='age_hora_desde' type='varchar' required='false' label='${lbl:b_time_since}' maxlen='5'/>
	<parameter id='age_jornada_desde' type='varchar' required='false' label='${lbl:b_working_day}' maxlen='2'/>
	<parameter id='age_hora_hasta' type='varchar' required='false' label='${lbl:b_time_until}' maxlen='5'/>
	<parameter id='age_jornada_hasta' type='varchar' required='false' label='${lbl:b_working_day}' maxlen='2'/>
	<parameter id='age_localidad' type='varchar' required='false' label='${lbl:b_location}' maxlen='56'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='age_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
parameter='age_descripcion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='age_dia_semana'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='age_hora_desde'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='age_jornada_desde'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='age_hora_hasta'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='age_jornada_hasta'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='age_localidad'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='age_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='age_descripcion'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
