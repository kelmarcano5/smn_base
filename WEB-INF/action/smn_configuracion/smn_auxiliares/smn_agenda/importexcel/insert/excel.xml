<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='age_codigo' type='varchar' required='true' maxlen='16'/>
	<parameter id='age_descripcion' type='varchar' required='true' maxlen='48'/>
	<parameter id='age_dia_semana_desc' type='varchar' required='true' maxlen='10'/>
	<parameter id='age_hora_desde' type='varchar' required='true' maxlen='5'/>
	<parameter id='age_jornada_desde_desc' type='varchar' required='true' maxlen='2'/>
	<parameter id='age_hora_hasta' type='varchar' required='true' maxlen='5'/>
	<parameter id='age_jornada_hasta_desc' type='varchar' required='true' maxlen='2'/>
	<parameter id='age_localidad' type='varchar' required='false' maxlen='56'/>	
	
	<parameter id='age_dia_semana_ref' type='varchar' required='false' maxlen='2'/>
	<parameter id='age_jornada_desde_ref' type='varchar' required='false' maxlen='2'/>
	<parameter id='age_jornada_hasta_ref' type='varchar' required='false' maxlen='2'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='age_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='age_descripcion'/>
			
	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_aux_business_unit_not_recorded}: age_dia_semana' 
		parameter='age_dia_semana_ref' 
		sql='age-dia-semana.sql'
		id='age_dia_semana_ref'/>
		
	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_aux_business_unit_not_recorded}: age_jornada_desde' 
		parameter='age_jornada_desde_ref' 
		sql='age-jornada-desde.sql'
		id='age_jornada_desde_ref'/>
		
	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_aux_business_unit_not_recorded}: age_jornada_hasta' 
		parameter='age_jornada_hasta_ref' 
		sql='age-jornada-hasta.sql'
		id='age_jornada_hasta_ref'/>


</validator>
