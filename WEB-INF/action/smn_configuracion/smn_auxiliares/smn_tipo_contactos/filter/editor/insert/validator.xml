<?xml version='1.0' encoding='ISO-8859-1'?>
<validator onerror='/action/error/validation/ajax'>
	<parameter id='tco_codigo' type='varchar' required='true' label='${lbl:b_code}' maxlen='10'/>
	<parameter id='tco_descripcion' type='varchar' required='true' label='${lbl:b_description}' maxlen='60'/>
	<parameter id='tco_clase' type='varchar' required='true' label='${lbl:b_class}' maxlen='2'/>

	<parameter id='tco_envia_mensaje' type='varchar' required='true' label='${lbl:b_send_sms}' maxlen='2'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='tco_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='tco_descripcion'/>


</validator>
