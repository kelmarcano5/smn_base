<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='cnt_nombres' type='varchar' required='false' label='${lbl:s_profile_fname}' maxlen='100'/>
	<parameter id='cnt_apellidos' type='varchar' required='false' label='${lbl:s_profile_lname}' maxlen='100'/>
	<parameter id='cnt_email' type='varchar' required='false' label='${lbl:s_profile_email}' maxlen='96'/>
	<parameter id='smn_auxiliar_id' type='integer' required='false' label='${lbl:b_auxiliary}' maxlen='10'/>
	<parameter id='smn_clase_auxiliar_rf' type='integer' required='false' label='${lbl:b_auxiliary_classes}' maxlen='10'/>
	<parameter id='smn_tipo_contactos_rf' type='integer' required='false' label='${lbl:b_type_contacts}' maxlen='10'/>
	<parameter id='cnt_descripcion' type='varchar' required='false' label='${lbl:b_description}' maxlen='100'/>
	<parameter id='smn_tipo_contactos_rf1' type='integer' required='false' label='${lbl:b_type_contacts}' maxlen='10'/>
	<parameter id='cnt_descripcion1' type='varchar' required='false' label='${lbl:b_description}' maxlen='255'/>
	<parameter id='cnt_telefono_contacto' type='varchar' required='false' label='${lbl:b_phone}' maxlen='32'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='cnt_nombres'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='cnt_apellidos'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='cnt_email'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
parameter='cnt_descripcion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
parameter='cnt_descripcion1'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='cnt_telefono_contacto'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='cnt_nombres'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='cnt_descripcion'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='cnt_descripcion1'/>



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
