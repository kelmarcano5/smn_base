<?xml version='1.0' encoding='ISO-8859-1'?>
<validator onerror='/action/error/validation/ajax'>
	<parameter id='esp_codigo' type='varchar' required='true' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='esp_descripcion' type='varchar' required='true' label='${lbl:b_description}' maxlen='48'/>

	<parameter id='smn_sucursales_id' type='varchar' required='true' label='Ítems'/>
	<custom-validator classname='dinamica.validators.StringToRecordset' paramName='smn_sucursales_id' recordsetId='query-smn_sucursales.sql' separatorChar=';' colName='smn_sucursales_id' colType='integer'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='esp_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='esp_descripcion'/>



</validator>
