<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="2" cellStep="0" name="${lbl:b_auxiliary_classes}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_auxiliary_classes}' 
		filename='${lbl:b_auxiliary_classes}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='cla_codigo' label='${lbl:b_code}' />
		<col id='cla_nombre' label='${lbl:b_name}' />
		<col id='mod_nombre' label='${lbl:b_module}' />
		<col id='naa_nombre' label='${lbl:b_nature}' />
		<col id='cla_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
