<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		<recordset id='detail-smnauxiliarcontable.sql' source='session' scope='transaction' />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="0" cellPosX="2" cellStep="0" name="${lbl:b_accounting_assistant}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_accounting_assistant}' 
		filename='${lbl:b_accounting_assistant}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='naa_nombre' label='${lbl:b_auxiliary_class}' />
		<col id='aca_tipo_persona_combo' label='${lbl:b_kind_of_person}' />
		<col id='ent_descripcion_corta' label='${lbl:b_entity}'  />
		<col id='suc_nombre' label='${lbl:b_subsidiary}' />
		<col id='uen_nombre' label='${lbl:b_business_unit}' />
		<col id='ase_descripcion' label='${lbl:b_service_area}' />
		<col id='uns_descripcion' label='${lbl:b_service_unit}' />
		<col id='aca_fecha_registro' label='${lbl:b_store_date}' />
		
		<!--opcional-->
		<sheet recordset="detail-smnauxiliarcontable.sql" sheetname="${lbl:b_accounting_assistant_detail}">
			<col id='aac_codigo' label='${lbl:b_code}' />
			<col id='aac_descripcion' label='${lbl:b_description}' />
			<col id='tdo_descripcion' label='${lbl:b_official_document_type}'  />
			<col id='aac_num_doc_oficial' label='${lbl:b_official_document_number}' />
			<col id='aac_fecha_registro' label='${lbl:b_store_date}' />
 		</sheet>

	</excel>

</config>
