<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		<recordset id='detail-smnauxiliarcontable.sql' source='session' scope='transaction' />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_auxiliary}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_auxiliary}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_auxiliary}' width='60' spacingBefore='40'>
			<col name='naa_nombre' title='${lbl:b_auxiliary_class}' align='left' />
			<col name='aca_tipo_persona_combo' title='${lbl:b_kind_of_person}' align='left' />
			<col name='ent_descripcion_corta' title='${lbl:b_entity}' align='left'  />
			<col name='suc_nombre' title='${lbl:b_subsidiary}' align='left' />
			<col name='uen_nombre' title='${lbl:b_business_unit}' align='left' />
			<col name='ase_descripcion' title='${lbl:b_service_area}' align='left' />
			<col name='uns_descripcion' title='${lbl:b_service_unit}' align='left' />
			<col name='aca_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>
		<record recordset='detail-smnauxiliarcontable.sql' width='100' spacingBefore='40'>
			<col name='aac_codigo' title='${lbl:b_code}' width='20' align='left' />
			<col name='aac_descripcion' title='${lbl:b_description}' width='20' align='left' />
			<col name='tdo_descripcion' title='${lbl:b_official_document_type}' width='20' align='left'  />
			<col name='aac_num_doc_oficial' title='${lbl:b_official_document_number}' width='20' align='left' />
			<col name='aac_fecha_registro' title='${lbl:b_store_date}' width='20' align='left' format='dd-MM-yyyy' />
		</record>
	</pdf-report>
</config>
