<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnauxiliarunidadesnegocios.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_outsourced_units_business}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_outsourced_units_business}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnauxiliarunidadesnegocios.sql' width='100' spacingBefore='40'>
			<col name='tun_codigo' title='${lbl:b_code}' width='12' align='left' />
			<col name='tun_nombre' title='${lbl:b_name}' width='12' align='left' />
			<col name='smn_clase_auxiliar_rf' title='${lbl:b_class_auxiliary}' align='left' format='######' />
			<col name='smn_auxiliar_rf' title='${lbl:b_auxiliary}' align='left' format='######' />
			<col name='tun_responsable' title='${lbl:b_responsible}' width='12' align='left' />
			<col name='dir_descripcion' title='${lbl:b_address}' width='12' align='left'  />
			<col name='tun_telefono_fijo' title='${lbl:b_fixed_phone}' width='12' align='left' />
			<col name='tun_telefono_movil' title='${lbl:b_mobile_phone}' width='12' align='left' />
			<col name='tun_email' title='${lbl:s_profile_email}' width='12' align='left' />
			<col name='tun_fecha_registro' title='${lbl:b_store_date}' width='12' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
