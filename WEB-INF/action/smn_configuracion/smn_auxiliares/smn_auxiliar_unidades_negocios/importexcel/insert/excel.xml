<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='tun_codigo' type='varchar' required='true' maxlen='16'/>
	<parameter id='tun_nombre' type='varchar' required='true' maxlen='48'/>
	<parameter id='tun_responsable' type='varchar' required='true' maxlen='48'/>
	<parameter id='tun_direccion_desc' type='varchar' required='true' maxlen='48'/>
	<parameter id='tun_telefono_fijo' type='varchar' required='true' maxlen='24'/>
	<parameter id='tun_telefono_movil' type='varchar' required='true' maxlen='24'/>
	<parameter id='tun_email' type='varchar' required='true' maxlen='96'/>

	<parameter id='tun_direccion_ref' type='integer' required='false' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='tun_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='tun_nombre'/>


	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: tun_direccion' 
		parameter='tun_direccion_ref' 
		sql='tun_direccion.sql' 
		id='tun_direccion_ref'/>

</validator>
