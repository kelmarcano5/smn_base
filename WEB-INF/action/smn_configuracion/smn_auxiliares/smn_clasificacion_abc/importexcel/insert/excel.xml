<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='clf_codigo' type='varchar' required='true' maxlen='16'/>
	<parameter id='clf_descripcion' type='varchar' required='true' maxlen='48'/>
	<parameter id='clf_ponderacion' type='integer' required='true' maxlen='2'/>


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='clf_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='clf_descripcion'/>


</validator>
