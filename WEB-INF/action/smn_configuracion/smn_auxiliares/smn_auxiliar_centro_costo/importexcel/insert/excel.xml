<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='tco_codigo' type='varchar' required='true' maxlen='16'/>
	<parameter id='tco_descripcion_corta' type='varchar' required='true' maxlen='32'/>
	<parameter id='tco_descripcion_larga' type='varchar' required='true' maxlen='48'/>
	<parameter id='tco_clase_auxiliar_desc' type='varchar' required='false' maxlen='48'/>
	<parameter id='tco_auxiliar_desc' type='varchar' required='false' maxlen='48'/>
	<parameter id='tco_responsable' type='varchar' required='true' maxlen='48'/>
	<parameter id='tco_tipo_cco_desc' type='varchar' required='true' maxlen='24'/>
	<parameter id='tco_nivel' type='integer' required='true' maxlen='2'/>

	<parameter id='tco_clase_auxiliar_ref' type='integer' required='false' maxlen='10'/>
	<parameter id='tco_auxiliar_ref' type='integer' required='false' maxlen='10'/>
	<parameter id='tco_tipo_cco_ref' type='varchar' required='false' maxlen='2'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='tco_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='tco_descripcion_corta'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='tco_descripcion_larga'/>

	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: tco_tipo_cco' 
		parameter='tco_tipo_cco_ref' 
		sql='tco_tipo_cco.sql' 
		id='tco_tipo_cco_ref'/>

	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: tco_clase_auxiliar' 
		parameter='tco_clase_auxiliar_ref' 
		sql='tco_clase_auxiliar.sql' 
		id='tco_clase_auxiliar_ref'/>

	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: tco_auxiliar' 
		parameter='tco_auxiliar_ref' 
		sql='tco_auxiliar.sql' 
		id='tco_auxiliar_ref'/>

</validator>
