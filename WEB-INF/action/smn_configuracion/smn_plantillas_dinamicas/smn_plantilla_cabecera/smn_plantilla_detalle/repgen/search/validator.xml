<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_plantilla_cabecera_id' type='integer' required='false' label='${lbl:b_header_stencil}' maxlen='10'/>
	<parameter id='smn_seccion_rf' type='integer' required='false' label='${lbl:b_section}' maxlen='10'/>
	<parameter id='pde_sec_seccion' type='integer' required='false' label='${lbl:b_sec_section}' maxlen='10'/>
	<parameter id='smn_pregunta_rf' type='integer' required='false' label='${lbl:b_question}' maxlen='10'/>
	<parameter id='pde_sec_pregunta' type='integer' required='false' label='${lbl:b_sec_question}' maxlen='10'/>
	<parameter id='pde_status' type='varchar' required='false' label='${lbl:b_status}' maxlen='2'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='pde_status'
		rule='contains' />



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
