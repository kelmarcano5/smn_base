<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnvariable.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_smn_variable}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_smn_variable}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnvariable.sql' width='100' spacingBefore='40'>
			<col name='tva_codigo_pl0' title='${lbl:b_smn_tipo_variable_id}' width='20' align='left' />
			<col name='var_codigo' title='${lbl:b_var_codigo}' width='20' align='left' />
			<col name='var_descripcion' title='${lbl:b_var_descripcion}' width='20' align='left' />
			<col name='var_estatus_combo' title='${lbl:b_status}' width='20' align='left' />
			<col name='var_fecha_registro' title='${lbl:b_store_date}' width='20' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
