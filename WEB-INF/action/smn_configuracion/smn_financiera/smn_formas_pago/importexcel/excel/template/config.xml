<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="false">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnformaspago-template.sql" source="sql" scope="transaction" />
		<recordset id='query-smnfranquicias.sql' source='sql' scope='transaction' />
		<recordset id='query-smnmediopago.sql' source='sql' scope='transaction' />
		<recordset id='query-requierebanco.sql' source='sql' scope='transaction' />
	</transaction>

	<output>
		<classname>domain.repgen.smn_configuracion.smn_financiera.smn_formas_pago.ExcelReportOutput</classname>
	</output>
		
	<excel 
		filename='${lbl:b_way_to_pay}.xls'    
		header-background='true' >
		
	<sheet recordset="query-smnformaspago-template.sql" sheetname="${lbl:b_way_to_pay}">
	
		<col id='fop_codigo' label='${lbl:b_code}' />
		<col id='fop_descripcion' label='${lbl:b_description}' />
		<col id='fop_medio_pago' label='${lbl:b_medio_pago}' />
		<col id='fop_requiere_banco' label='${lbl:b_bank}' />
		<col id='fop_franquicia' label='${lbl:b_franquicias}' />
		
		<col id='fop_medio_pago_reference' label='${lbl:b_medio_pago}' />
		<col id='fop_requiere_banco_reference' label='${lbl:b_bank}' />
		<col id='fop_franquicia_reference' label='${lbl:b_franquicias}' />

	</sheet>

	<sheet recordset='query-requierebanco.sql' sheetname='${lbl:b_bank}'>
		<col id='requiere_banco' label='${lbl:b_bank}' />
	</sheet>	
	
	<sheet recordset='query-smnfranquicias.sql' sheetname='${lbl:b_franquicias}'>
		<col id='fra_descripcion' label='${lbl:b_description}' />
	</sheet>

	<sheet recordset='query-smnmediopago.sql' sheetname='${lbl:b_medio_pago}'>
		<col id='mpa_descripcion' label='${lbl:b_description}' />
	</sheet>

	</excel>

</config>
