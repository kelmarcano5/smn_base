	<parameter id='cfi_cant_dias' type='integer' required='true' maxlen='10'/>
	<parameter id='cfi_limite_credito' type='double' required='false' maxlen='10'/>
	<parameter id='cfi_porc_exceso_limite' type='double' required='false' maxlen='10'/>
	<parameter id='cfi_valida_saldos_vec' type='varchar' required='false' maxlen='1'/>
	<parameter id='cfi_dias_adic_saldos_venc' type='integer' required='false' maxlen='10'/>
	<parameter id='cfi_num_cheques_devuel' type='integer' required='false' maxlen='10'/>
	<parameter id='cfi_estatus' type='varchar' required='true' maxlen='2'/>
	<parameter id='cfi_vigencia' type='date' required='true' maxlen='10'/>


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
