<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_financiery_conditions}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_financiery_conditions}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_financiery_conditions}' width='60' spacingBefore='40'>
			<col name='cfi_codigo' title='${lbl:b_code}' align='left' />
			<col name='cfi_description' title='${lbl:b_description}' align='left' />
			<col name='cfi_cant_dias' title='${lbl:b_quantity_days}' align='left' format='######' />
			<col name='cfi_limite_credito' title='${lbl:b_credit_limit}' align='left' format='#,###,##0.00' />
			<col name='cfi_porc_exceso_limite' title='${lbl:b_porcentage_excess_limit}' align='left' format='#,###,##0.00' />
			<col name='cfi_valida_saldos_vec_combo' title='${lbl:b_validate_balance}' align='left' />
			<col name='cfi_dias_adic_saldos_venc' title='${lbl:b_days_adic_balance_expire}' align='left' format='######' />
			<col name='cfi_num_cheques_devuel' title='${lbl:b_refused_cheq_number}' align='left' format='######' />
			<col name='cfi_estatus_combo' title='${lbl:b_estatus}' align='left' />
			<col name='cfi_vigencia' title='${lbl:b_vigency}' align='left' format='dd-MM-yyyy' />
			<col name='cfi_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
