<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_baremos_detail}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_baremos_detail}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_baremos_detail}' width='60' spacingBefore='40'>
			<col name='smn_baremos_id_combo' title='${lbl:b_baremo}' align='left' format='######' />
			<col name='smn_servicios_rf_combo' title='${lbl:b_service}' align='left' format='######' />
			<col name='bad_tipo_componente_combo' title='${lbl:b_type}' align='left' />
			<col name='smn_clase_auxiliar_rf_combo' title='${lbl:b_auxiliary_class}' align='left' format='######' />
			<col name='smn_item_rf_combo' title='${lbl:b_item}' align='left' format='######' />
			<col name='smn_almacen_rf_combo' title='${lbl:b_store_code}' align='left' format='######' />
			<col name='bad_cantidad' title='${lbl:b_amount}' align='left' format='#,###,##0.00' />
			<col name='bad_precio_moneda_local' title='${lbl:b_coin_local_price}' align='left' format='#,###,##0.00' />
			<col name='smn_moneda_rf_combo' title='${lbl:b_coin}' align='left' format='######' />
			<col name='bad_precio_moneda_alterna' title='${lbl:b_coin_altern_price}' align='left' format='######' />
			<col name='smn_descuento_rf_combo' title='${lbl:b_discount}' align='left' format='######' />
			<col name='bad_estatus' title='${lbl:b_status}' align='left' />
			<col name='bad_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
