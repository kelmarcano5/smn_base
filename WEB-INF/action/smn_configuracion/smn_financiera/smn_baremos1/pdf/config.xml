<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnbaremos.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_baremos}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_baremos}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnbaremos.sql' width='100' spacingBefore='40'>
			<col name='bar_codigo' title='${lbl:b_code}' width='14' align='left' />
			<col name='bar_descripcion' title='${lbl:b_description}' width='14' align='left' />
			<col name='smn_entidades_rf' title='${lbl:b_entity}' width='14' align='left' format='######' />
			<col name='smn_sucursales_rf' title='${lbl:b_subsidiary}' width='14' align='left' format='######' />
			<col name='bar_vigencia_desde' title='${lbl:b_validation_date_from}' width='14' align='left' format='dd-MM-yyyy' />
			<col name='bar_vigencia_hasta' title='${lbl:b_validation_date_to}' width='14' align='left' format='dd-MM-yyyy' />
			<col name='bar_fecha_registro' title='${lbl:b_store_date}' width='14' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
