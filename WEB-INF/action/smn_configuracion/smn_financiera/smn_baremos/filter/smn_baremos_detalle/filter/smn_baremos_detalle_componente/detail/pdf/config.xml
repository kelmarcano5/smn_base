<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_baremo_detail_component}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_baremo_detail_component}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_baremo_detail_component}' width='60' spacingBefore='40'>
			<col name='smn_baremos_detalle_id_combo' title='${lbl:b_baremos_detail}' align='left' format='######' />
			<col name='smn_tipo_compuesto_rf_combo' title='${lbl:b_type}' align='left' />
			<col name='smn_componente_rf_combo' title='${lbl:b_components}' align='left' format='######' />
			<col name='smn_almacen_rf_combo' title='${lbl:b_store_code}' align='left' format='######' />
			<col name='smn_item_rf_combo' title='${lbl:b_item}' align='left' format='######' />
			<col name='smn_forma_calculo_rf_combo' title='${lbl:b_calculus_form}' align='left' />
			<col name='smn_porcentaje_rf' title='${lbl:b_percentage}' align='left' format='#,###,##0.00' />
			<col name='bdc_cantidad' title='${lbl:b_quantity}' align='left' format='######' />
			<col name='bdc_precio_ml' title='${lbl:b_price}' align='left' format='#,###,##0.00' />
			<col name='bdc_monto_ml' title='${lbl:b_amount}' align='left' format='#,###,##0.00' />
			<col name='smn_moneda_rf_combo' title='${lbl:b_coin}' align='left' format='######' />
			<col name='bdc_precio_ma' title='${lbl:b_coin_altern_price}' align='left' format='#,###,##0.00' />
			<col name='bdc_monto_ma' title='${lbl:b_coin_altern_amount}' align='left' format='#,###,##0.00' />
			<col name='bdc_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
