<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnbaremosdetalle.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_baremos_detail}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_baremos_detail}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnbaremosdetalle.sql' width='100' spacingBefore='40'>
			<col name='smn_baremos_id_combo' title='${lbl:b_baremo}' width='12' align='left' format='######' />
			<col name='smn_servicios_rf_combo' title='${lbl:b_service}' width='12' align='left' format='######' />
			<col name='bad_tipo_componente_combo' title='${lbl:b_type}' width='12' align='left' />
			<col name='smn_item_rf_combo' title='${lbl:b_item}' width='12' align='left' format='######' />
			<col name='bad_cantidad' title='${lbl:b_amount}' width='12' align='left' format='#,###,##0.00' />
			<col name='bad_precio_moneda_local' title='${lbl:b_coin_local_price}' width='12' align='left' format='#,###,##0.00' />
			<col name='bad_estatus' title='${lbl:b_status}' width='12' align='left' />
			<col name='bad_fecha_registro' title='${lbl:b_store_date}' width='12' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
