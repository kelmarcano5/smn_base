<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Ejecutar consulta y enrutar dependiendo de que un recordset
		tenga o no registros
	</summary>

	<log>false</log>

	<!--configura el control de paginacion-->
	<set-request-attribute id="paging.recordset" value="query-smnbaremosdetalle.sql" />
	<set-request-attribute id="paging.pagesize" value="10" />

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>ite_codigo</colname>
			<colname>ite_descripcion</colname>
			<colname>svc_codigo</colname>
			<colname>svc_descripcion</colname>
			<colname>smn_baremos_id</colname>
			<colname>smn_servicios_rf</colname>
			<colname>smn_item_rf</colname>
			<colname>bad_tipo_componente</colname>
			<colname>bad_fecha_registro_ini</colname>
			<colname>bad_fecha_registro_fin</colname>
		
		</cols>
		<table>smn_base.smn_baremos_detalle</table>
		<oper>CONSULTA</oper>
		<area>Consulta</area>
		<!-- 
 			para auditoria de consulta permite obtener la cantidad de registro obtenidos
 			de la busqueda (opcional)
 		-->
		<recordCount recordset="query-smnbaremosdetalle.sql"/>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableSearch</classname>
		<validator>true</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
	</transaction>
	
	<searchCols>ite_codigo;ite_descripcion;svc_codigo;svc_descripcion;smn_baremos_id;smn_servicios_rf;smn_item_rf;bad_tipo_componente;bad_fecha_registro_ini;bad_fecha_registro_fin;</searchCols>

	<on-exit return-code="0" forward-to="/action/initview" />
	<on-exit return-code="1" forward-to="${def:actionroot}/notfound" />

</config>
