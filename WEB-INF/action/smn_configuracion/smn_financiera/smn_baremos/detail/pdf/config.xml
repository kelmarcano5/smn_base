<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_baremos}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_baremos}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_baremos}' width='60' spacingBefore='40'>
			<col name='bar_codigo' title='${lbl:b_code}' align='left' />
			<col name='bar_descripcion' title='${lbl:b_description}' align='left' />
			<col name='smn_entidades_rf' title='${lbl:b_entity}' align='left' format='######' />
			<col name='smn_sucursales_rf' title='${lbl:b_subsidiary}' align='left' format='######' />
			<col name='bar_vigencia_desde' title='${lbl:b_validation_date_from}' align='left' format='dd-MM-yyyy' />
			<col name='bar_vigencia_hasta' title='${lbl:b_validation_date_to}' align='left' format='dd-MM-yyyy' />
			<col name='bar_tipo' title='${lbl:b_type}' align='left' />
			<col name='smn_clase_auxiliar_rf' title='${lbl:b_auxiliary_class}' align='left' format='######' />
			<col name='smn_auxiliar_rf' title='${lbl:b_auxiliary}' align='left' format='######' />
			<col name='bar_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
