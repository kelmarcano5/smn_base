<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnconversionunidadmedida.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_conversion_unidad_medida}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_conversion_unidad_medida}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_unidad_medida_origen_rf' title='${lbl:b_unidad_medida_origen}'  format='######' align='left' />
			<col name='smn_unidad_medida_destino_rf' title='${lbl:b_unidad_medida_destino}'  format='######' align='left' />
			<col name='cou_factor_conversion' title='${lbl:b_factor_conversion}'  format='#,###,##0.00' align='left' />
			<col name='cou_fecha_registro_ini' title='${lbl:b_store_date_greather_than}'  format='dd-MM-yyyy' align='left' />
			<col name='cou_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnconversionunidadmedida.sql' width='100' spacingBefore='10'>
			<col name='smn_unidad_medida_origen_rf_combo' title='${lbl:b_unidad_medida_origen}' width='14' align='left' format='######' />
			<col name='smn_unidad_medida_destino_rf_combo' title='${lbl:b_unidad_medida_destino}' width='14' align='left' format='######' />
			<col name='cou_factor_conversion' title='${lbl:b_factor_conversion}' width='14' align='left' format='#,###,##0.00' />
			<col name='cou_idioma' title='${lbl:s_profile_lang}' width='14' align='left' />
			<col name='cou_usuario' title='${lbl:b_users}' width='14' align='left' />
			<col name='cou_fecha_registro' title='${lbl:b_store_date}' width='14' align='left' format='dd-MM-yyyy' />
			<col name='cou_hora' title='${lbl:s_loginhist_col2}' width='14' align='left' />

		</record>

	</pdf-report>
</config>
