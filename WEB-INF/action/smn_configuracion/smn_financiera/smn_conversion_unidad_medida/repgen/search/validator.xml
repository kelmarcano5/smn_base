<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_unidad_medida_origen_rf' type='integer' required='false' label='${lbl:b_unidad_medida_origen}' maxlen='10'/>
	<parameter id='smn_unidad_medida_destino_rf' type='integer' required='false' label='${lbl:b_unidad_medida_destino}' maxlen='10'/>
	<parameter id='cou_factor_conversion' type='double' required='false' label='${lbl:b_factor_conversion}' maxlen='10'/>



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
