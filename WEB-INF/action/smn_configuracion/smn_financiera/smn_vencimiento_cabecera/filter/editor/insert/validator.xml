<?xml version='1.0' encoding='ISO-8859-1'?>
<validator onerror='/action/error/validation/ajax'>
	<parameter id='tve_codigo' type='varchar' required='true' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='tve_descripcion' type='varchar' required='true' label='${lbl:b_description}' maxlen='100'/>
	<parameter id='tve_estatus' type='varchar' required='true' label='${lbl:b_status}' maxlen='1'/>
	<parameter id='tve_vigencia' type='date' required='true' label='${lbl:b_validity}' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='tve_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='tve_descripcion'/>


</validator>
