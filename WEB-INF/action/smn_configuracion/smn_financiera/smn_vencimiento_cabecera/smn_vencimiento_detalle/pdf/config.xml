<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnvencimientodetalle.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_detail_expiration}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_detail_expiration}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnvencimientodetalle.sql' width='100' spacingBefore='40'>
			<col name='smn_vencimiento_cabecera_id' title='${lbl:b_header_expiration}' width='16' align='left' format='######' />
			<col name='tvd_titulo' title='${lbl:b_tittle}' width='16' align='left' />
			<col name='tvd_tipo_aplicacion' title='${lbl:b_application}' width='16' align='left' />
			<col name='tvd_dias_desde' title='${lbl:b_day_init}' width='16' align='left' format='######' />
			<col name='tvd_dias_hasta' title='${lbl:b_day_end}' width='16' align='left' format='######' />
			<col name='tvd_fecha_registro' title='${lbl:b_store_date}' width='16' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
