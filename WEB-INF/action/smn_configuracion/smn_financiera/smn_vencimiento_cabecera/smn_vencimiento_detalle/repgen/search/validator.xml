<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_vencimiento_cabecera_id_name' type='varchar' required='false' label='${lbl:b_header_expiration}'/>
	<parameter id='smn_vencimiento_cabecera_id' type='integer' required='false' label='${lbl:b_header_expiration}' maxlen='10'/>
	<parameter id='tvd_titulo' type='varchar' required='false' label='${lbl:b_tittle}' maxlen='16'/>
	<parameter id='tvd_tipo_aplicacion' type='varchar' required='false' label='${lbl:b_application}' maxlen='2'/>
	<parameter id='tvd_dias_desde' type='integer' required='false' label='${lbl:b_day_init}' maxlen='5'/>
	<parameter id='tvd_dias_hasta' type='integer' required='false' label='${lbl:b_day_end}' maxlen='5'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_vencimiento_cabecera_id_name'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='tvd_titulo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='tvd_tipo_aplicacion'
		rule='contains' />



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
