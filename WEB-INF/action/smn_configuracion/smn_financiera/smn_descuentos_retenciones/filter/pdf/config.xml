<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smndescuentosretenciones.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_discount_tax}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_discount_tax}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='dyr_codigo' title='${lbl:b_code}'  align='left' />
			<col name='dyr_descripcion' title='${lbl:b_description}'  align='left' />
			<col name='smn_vencimiento_cabecera_id' title='${lbl:b_expiration_header}'  format='######' align='left' />
			<col name='dyr_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='dyr_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smndescuentosretenciones.sql' width='100' spacingBefore='10'>
			<col name='dyr_codigo' title='${lbl:b_code}' width='11' align='left' />
			<col name='dyr_descripcion' title='${lbl:b_description}' width='11' align='left' />
			<col name='smn_vencimiento_cabecera_id' title='${lbl:b_expiration_header}' width='11' align='left' format='######' />
			<col name='dyr_apli_cant_precio_combo' title='${lbl:b_apply_quantity_price}' width='11' align='left' />
			<col name='dyr_porcentaje_base' title='${lbl:b_percentage_base}' width='11' align='left' format='#,###,##0.00' />
			<col name='dyr_porcentaje_descuento' title='${lbl:b_percentage_discount}' width='11' align='left' format='#,###,##0.00' />
			<col name='dyr_estatus_combo' title='${lbl:b_status}' width='11' align='left' />
			<col name='dyr_vigencia' title='${lbl:b_validity}' width='11' align='left' format='dd-MM-yyyy' />
			<col name='dyr_fecha_registro' title='${lbl:b_store_date}' width='11' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
