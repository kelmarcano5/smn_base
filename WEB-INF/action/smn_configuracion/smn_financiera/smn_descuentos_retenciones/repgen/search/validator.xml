<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='dyr_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='dyr_descripcion' type='varchar' required='false' label='${lbl:b_description}' maxlen='64'/>
	<parameter id='smn_vencimiento_cabecera_id' type='integer' required='false' label='${lbl:b_expiration_header}' maxlen='10'/>
	<parameter id='dyr_apli_cant_precio' type='varchar' required='false' label='${lbl:b_apply_quantity_price}' maxlen='2'/>
	<parameter id='dyr_porcentaje_base' type='double' required='false' label='${lbl:b_percentage_base}' maxlen='10'/>
	<parameter id='dyr_porcentaje_descuento' type='double' required='false' label='${lbl:b_percentage_discount}' maxlen='10'/>
	<parameter id='dyr_estatus' type='varchar' required='false' label='${lbl:b_status}' maxlen='2'/>
	<parameter id='dyr_vigencia' type='date' required='false' label='${lbl:b_validity}' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='dyr_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
parameter='dyr_descripcion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='dyr_apli_cant_precio'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='dyr_estatus'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='dyr_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='dyr_descripcion'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
