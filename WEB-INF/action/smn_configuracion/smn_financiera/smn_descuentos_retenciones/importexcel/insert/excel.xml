<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='dyr_codigo' type='varchar' required='true' maxlen='16'/>
	<parameter id='dyr_descripcion' type='varchar' required='true' maxlen='64'/>
	<parameter id='smn_vencimiento_cabecera_id' type='integer' required='false' maxlen='10'/>
	<parameter id='dyr_apli_cant_precio' type='varchar' required='true' maxlen='2'/>
	<parameter id='dyr_porcentaje_base' type='double' required='true' maxlen='10'/>
	<parameter id='dyr_porcentaje_descuento' type='double' required='true' maxlen='10'/>
	<parameter id='dyr_estatus' type='varchar' required='true' maxlen='2'/>
	<parameter id='dyr_vigencia' type='date' required='true' maxlen='10'/>


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='dyr_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='dyr_descripcion'/>


</validator>
