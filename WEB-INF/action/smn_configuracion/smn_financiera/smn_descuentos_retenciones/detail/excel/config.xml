<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="4" cellStep="0" name="${lbl:b_discount_tax}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_discount_tax}' 
		filename='${lbl:b_discount_tax}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='dyr_codigo' label='${lbl:b_code}' />
		<col id='dyr_descripcion' label='${lbl:b_description}' />
		<col id='smn_vencimiento_cabecera_id' label='${lbl:b_expiration_header}' />
		<col id='dyr_apli_cant_precio_combo' label='${lbl:b_apply_quantity_price}' />
		<col id='dyr_porcentaje_base' label='${lbl:b_percentage_base}' />
		<col id='dyr_porcentaje_descuento' label='${lbl:b_percentage_discount}' />
		<col id='dyr_estatus_combo' label='${lbl:b_status}' />
		<col id='dyr_vigencia' label='${lbl:b_validity}' />
		<col id='dyr_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
