<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_discount_tax}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_discount_tax}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_discount_tax}' width='60' spacingBefore='40'>
			<col name='dyr_codigo' title='${lbl:b_code}' align='left' />
			<col name='dyr_descripcion' title='${lbl:b_description}' align='left' />
			<col name='smn_vencimiento_cabecera_id' title='${lbl:b_expiration_header}' align='left' format='######' />
			<col name='dyr_apli_cant_precio_combo' title='${lbl:b_apply_quantity_price}' align='left' />
			<col name='dyr_porcentaje_base' title='${lbl:b_percentage_base}' align='left' format='#,###,##0.00' />
			<col name='dyr_porcentaje_descuento' title='${lbl:b_percentage_discount}' align='left' format='#,###,##0.00' />
			<col name='dyr_estatus_combo' title='${lbl:b_status}' align='left' />
			<col name='dyr_vigencia' title='${lbl:b_validity}' align='left' format='dd-MM-yyyy' />
			<col name='dyr_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
