<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='cba_entidades_financieras' type='integer' required='false' label='${lbl:b_financial_entity}' maxlen='10'/>
	<parameter id='cba_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='cba_nombre' type='varchar' required='false' label='${lbl:b_name}' maxlen='48'/>
	<parameter id='cba_nro_cuenta' type='varchar' required='false' label='${lbl:b_bank_account_number}' maxlen='24'/>
	<parameter id='cba_tipo_cta_banco' type='integer' required='false' label='${lbl:b_account_bank_type}' maxlen='10'/>
	<parameter id='cba_moneda' type='integer' required='false' label='${lbl:b_coin}' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='cba_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='cba_nombre'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='cba_nro_cuenta'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='cba_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='cba_nombre'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
