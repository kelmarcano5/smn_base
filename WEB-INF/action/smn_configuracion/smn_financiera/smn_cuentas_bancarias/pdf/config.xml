<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncuentasbancarias.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_bank_accounts}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_bank_accounts}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smncuentasbancarias.sql' width='100' spacingBefore='40'>
			<col name='efi_nombre' title='${lbl:b_financial_entity}' width='14' align='left'  />
			<col name='cba_codigo' title='${lbl:b_code}' width='14' align='left' />
			<col name='cba_nombre' title='${lbl:b_name}' width='14' align='left' />
			<col name='cba_nro_cuenta' title='${lbl:b_bank_account_number}' width='14' align='left' />
			<col name='tcb_descripcion' title='${lbl:b_account_bank_type}' width='14' align='left'  />
			<col name='mon_nombre' title='${lbl:b_coin}' width='14' align='left'  />
			<col name='cba_fecha_registro' title='${lbl:b_store_date}' width='14' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
