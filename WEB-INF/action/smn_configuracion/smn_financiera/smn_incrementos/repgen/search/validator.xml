<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='inc_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='inc_descripcion' type='varchar' required='false' label='${lbl:b_description}' maxlen='64'/>
	<parameter id='smn_vencimiento_cabecera_id' type='integer' required='false' label='${lbl:b_expiration_header}' maxlen='10'/>
	<parameter id='inc_apli_cant_precio' type='varchar' required='false' label='${lbl:b_apply_quantity_price}' maxlen='2'/>
	<parameter id='inc_porcentaje_base' type='double' required='false' label='${lbl:b_percentage_base}' maxlen='17'/>
	<parameter id='inc_porcentaje_incremento' type='double' required='false' label='${lbl:b_percentage_increment}' maxlen='17'/>
	<parameter id='inc_estatus' type='varchar' required='false' label='${lbl:b_status}' maxlen='2'/>
	<parameter id='inc_apli_todos_it' type='varchar' required='false' label='${lbl:b_apply_item}' maxlen='2'/>
	<parameter id='inc_apli_todos_se' type='varchar' required='false' label='${lbl:b_apply_services}' maxlen='2'/>
	<parameter id='inc_apli_todos_af' type='varchar' required='false' label='${lbl:b_apply_fixed_asset}' maxlen='2'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='inc_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
parameter='inc_descripcion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='inc_apli_cant_precio'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='inc_estatus'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='inc_apli_todos_it'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='inc_apli_todos_se'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='inc_apli_todos_af'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='inc_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='inc_descripcion'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
