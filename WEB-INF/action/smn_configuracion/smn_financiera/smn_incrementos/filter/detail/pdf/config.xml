<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_increment}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_increment}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_increment}' width='60' spacingBefore='40'>
			<col name='inc_codigo' title='${lbl:b_code}' align='left' />
			<col name='inc_descripcion' title='${lbl:b_description}' align='left' />
			<col name='smn_vencimiento_cabecera_id' title='${lbl:b_expiration_header}' align='left' format='######' />
			<col name='inc_apli_cant_precio' title='${lbl:b_apply_quantity_price}' align='left' />
			<col name='inc_porcentaje_base' title='${lbl:b_percentage_base}' align='left' format='#,###,##0.00' />
			<col name='inc_porcentaje_incremento' title='${lbl:b_percentage_increment}' align='left' format='#,###,##0.00' />
			<col name='inc_apli_todos_it' title='${lbl:b_apply_item}' align='left' />
			<col name='inc_apli_todos_se' title='${lbl:b_apply_services}' align='left' />
			<col name='inc_apli_todos_af' title='${lbl:b_apply_fixed_asset}' align='left' />
			<col name='inc_estatus' title='${lbl:b_status}' align='left' />
			<col name='inc_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
