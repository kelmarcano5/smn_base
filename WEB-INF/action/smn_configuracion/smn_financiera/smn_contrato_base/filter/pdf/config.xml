<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncontratobase.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_base_contract}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_base_contract}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='ctr_codigo' title='${lbl:b_code}'  align='left' />
			<col name='ctr_nombre' title='${lbl:b_name}'  align='left' />
			<col name='ctr_transaccion_rf' title='${lbl:b_transaction}'   align='left' />
			<col name='ctr_tipo' title='${lbl:b_type}'  align='left' />
			<col name='ctr_fecha_vencimiento' title='${lbl:b_date_expired}'  format='dd-MM-yyyy' align='left' />
			<col name='crp_direccion' title='${lbl:b_corporation}'   align='left' />
			<col name='ctr_fecha_registro_ini' title='${lbl:b_store_date}'   align='left' />
			<col name='ctr_fecha_registro_fin' title='${lbl:b_store_date}'   align='left' />

		</record>
		<record recordset='query-smncontratobase.sql' width='100' spacingBefore='10'>
			<col name='ctr_codigo' title='${lbl:b_code}' width='14' align='left' />
			<col name='ctr_nombre' title='${lbl:b_name}' width='14' align='left' />
			<col name='trg_descripcion' title='${lbl:b_transaction}' width='14' align='left'  />
			<col name='ctr_tipo' title='${lbl:b_type}' width='14' align='left' />
			<col name='ctr_fecha_vencimiento' title='${lbl:b_date_expired}' width='14' align='left' format='dd-MM-yyyy' />
			<col name='crp_direccion' title='${lbl:b_corporation}' width='14' align='left'  />
			<col name='ctr_fecha_registro' title='${lbl:b_store_date}' width='14' align='left'  />

		</record>

	</pdf-report>
</config>
