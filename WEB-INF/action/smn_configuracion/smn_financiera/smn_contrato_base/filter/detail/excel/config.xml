<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="3" cellStep="0" name="${lbl:b_base_contract}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_base_contract}' 
		filename='${lbl:b_base_contract}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='ctr_codigo' label='${lbl:b_code}' />
		<col id='ctr_nombre' label='${lbl:b_name}' />
		<col id='trg_descripcion' label='${lbl:b_transaction}' />
		<col id='ctr_tipo' label='${lbl:b_type}' />
		<col id='ctr_fecha_vencimiento' label='${lbl:b_date_expired}' />
		<col id='crp_direccion' label='${lbl:b_corporation}' />
		<col id='ctr_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
