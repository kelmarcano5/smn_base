<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Insertar registro 
	</summary>

	<log>false</log>

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>ctr_codigo</colname>
			<colname>ctr_nombre</colname>
			<colname>ctr_transaccion_rf</colname>
			<colname>ctr_tipo</colname>
			<colname>ctr_consecutivo</colname>
			<colname>ctr_fecha_inicio</colname>
			<colname>ctr_fec_registro</colname>
			<colname>ctr_fecha_vencimiento</colname>
			<colname>ctr_dias_renovacion</colname>
			<colname>ctr_frecuencia_pago_dias</colname>
			<colname>ctr_moneda_rf</colname>
			<colname>ctr_monto_otra_moneda</colname>
			<colname>ctr_corporacion_rf</colname>
			<colname>ctr_empresa_rf</colname>
			<colname>ctr_sucursal_rf</colname>
			<colname>ctr_area_servicio_rf</colname>
			<colname>ctr_unidad_servicio_rf</colname>
			<colname>ctr_centro_costo_rf</colname>
			<colname>ctr_observaciones</colname>
			<colname>ctr_vigencia</colname>
		
		</cols>
		<table>smn_base.smn_contrato_base</table>
		<oper>AÑADIR</oper>
		<area>Carga de datos</area>
		<!--
			query para obtener el ID generado o nombre de 
			la columna que contiene el pkey, si es query, 
			el alias del campo debe ser "id"
		-->
		<pkey>select ${seq:currval@smn_base.seq_smn_contrato_base} as id</pkey>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableTransaction</classname>
		<validator>true</validator>
		<transaction>true</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="nextval.sql" source="sql" scope="transaction" />
	</transaction>

	<query>insert.sql</query>

	<output>
		<classname>dinamica.GenericOutput</classname>
		<template>script.js</template>
		<set-http-headers>true</set-http-headers>
		<content-type>text/javascript</content-type>
		<expiration>0</expiration>
		<print mode="form" recordset="_request" />
		<print mode="form" recordset="nextval.sql" />
	</output>
	
	<!-- Envio de email declarativo -->
	<mail enabled="false">
		<subject>Subject</subject>
		<mail-to>martin.cordova@gmail.com</mail-to>
		<body>body.txt</body>
	</mail>

</config>
