<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_half_payment}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_half_payment}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_half_payment}' width='60' spacingBefore='40'>
			<col name='mpa_codigo' title='${lbl:b_code}' align='left' />
			<col name='mpa_descripcion' title='${lbl:b_description}' align='left' />
			<col name='mpa_tipo_medio_pago_combo' title='${lbl:b_type_half_payment}' align='left' />
			<col name='mpa_estatus_combo' title='${lbl:b_status}' align='left' />
			<col name='mpa_moneda_alterna' title='Moneda Alterna' align='left' />
			<col name='mpa_vigencia' title='${lbl:b_date_vig}' align='left' format='dd-MM-yyyy' />
			<col name='mpa_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
