<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnmediopago.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_half_payment}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_half_payment}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='mpa_codigo' title='${lbl:b_code}'  align='left' />
			<col name='mpa_descripcion' title='${lbl:b_description}'  align='left' />
			<col name='mpa_tipo_medio_pago' title='${lbl:b_type_half_payment}'  align='left' />

		</record>
		<record recordset='query-smnmediopago.sql' width='100' spacingBefore='10'>
			<col name='mpa_codigo' title='${lbl:b_code}' width='16' align='left' />
			<col name='mpa_descripcion' title='${lbl:b_description}' width='16' align='left' />
			<col name='mpa_tipo_medio_pago_combo' title='${lbl:b_type_half_payment}' width='16' align='left' />
			<col name='mpa_estatus_combo' title='${lbl:b_status}' width='16' align='left' />
			<col name='mpa_vigencia' title='${lbl:b_date_vig}' width='16' align='left' format='dd-MM-yyyy' />
			<col name='mpa_fecha_registro' title='${lbl:b_store_date}' width='16' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
