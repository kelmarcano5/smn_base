<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnferiados.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="4" cellStep="0" name="${lbl:b_holidays}"/>
	
	<excel 
		recordset='query-smnferiados.sql' 
		sheetname='${lbl:b_holidays}' 
		filename='${lbl:b_holidays}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='fer_codigo' label='${lbl:b_code}' />
		<col id='fer_descripcion' label='${lbl:b_description}' />
		<col id='pai_nombre_corto' label='${lbl:b_country}' />
		<col id='efe_nombre_corto' label='${lbl:b_federal_entities}' />
		<col id='ciu_nombre_corto' label='${lbl:b_city}' />
		<col id='mun_nombre_corto' label='${lbl:b_municipality}' />
		<col id='fer_feriado' label='${lbl:b_holliday}' />
		<col id='fer_laborable_combo' label='${lbl:b_workable}' />
		<col id='fer_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
