<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnferiados.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_holidays}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_holidays}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='fer_codigo' title='${lbl:b_code}'  align='left' />
			<col name='fer_descripcion' title='${lbl:b_description}'  align='left' />
			<col name='fer_pais' title='${lbl:b_country}'   align='left' />
			<col name='efe_nombre_corto' title='${lbl:b_federal_entities}'   align='left' />
			<col name='ciu_nombre_corto' title='${lbl:b_city}'   align='left' />
			<col name='mun_nombre_corto' title='${lbl:b_municipality}'   align='left' />
			<col name='fer_laborable' title='${lbl:b_workable}'  align='left' />
			<col name='fer_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='left' />
			<col name='fer_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnferiados.sql' width='100' spacingBefore='10'>
			<col name='fer_codigo' title='${lbl:b_code}' width='11' align='left' />
			<col name='fer_descripcion' title='${lbl:b_description}' width='11' align='left' />
			<col name='pai_nombre_corto' title='${lbl:b_country}' width='11' align='left'  />
			<col name='efe_nombre_corto' title='${lbl:b_federal_entities}' width='11' align='left'  />
			<col name='ciu_nombre_corto' title='${lbl:b_city}' width='11' align='left'  />
			<col name='mun_nombre_corto' title='${lbl:b_municipality}' width='11' align='left'  />
			<col name='fer_feriado' title='${lbl:b_holliday}' width='11' align='left' />
			<col name='fer_laborable_combo' title='${lbl:b_workable}' width='11' align='left' />
			<col name='fer_fecha_registro' title='${lbl:b_store_date}' width='11' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
