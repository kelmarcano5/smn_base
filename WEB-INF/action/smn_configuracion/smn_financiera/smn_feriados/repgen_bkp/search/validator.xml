<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='fer_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='fer_descripcion' type='varchar' required='false' label='${lbl:b_description}' maxlen='48'/>
	<parameter id='fer_pais' type='integer' required='false' label='${lbl:b_country}' maxlen='10'/>
	<parameter id='fer_entidad_federal' type='integer' required='false' label='${lbl:b_federal_entities}' maxlen='10'/>
	<parameter id='fer_ciudad' type='integer' required='false' label='${lbl:b_city}' maxlen='10'/>
	<parameter id='fer_municipio' type='integer' required='false' label='${lbl:b_municipality}' maxlen='10'/>
	<parameter id='fer_feriado' type='varchar' required='false' label='${lbl:b_holliday}' maxlen='5'/>
	<parameter id='fer_laborable' type='varchar' required='false' label='${lbl:b_workable}' maxlen='1'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='fer_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
parameter='fer_descripcion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='fer_feriado'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='fer_laborable'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='fer_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='fer_descripcion'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
