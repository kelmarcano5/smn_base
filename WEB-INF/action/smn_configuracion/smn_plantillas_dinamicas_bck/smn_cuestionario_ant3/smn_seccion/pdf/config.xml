<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnseccion.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_smn_seccion}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_smn_seccion}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnseccion.sql' width='100' spacingBefore='40'>
			<col name='cue_codigo_pl0' title='${lbl:b_smn_cuestionario_id}' width='16' align='left' />
			<col name='sec_codigo' title='${lbl:b_sec_codigo}' width='16' align='left' />
			<col name='sec_descripcion' title='${lbl:b_sec_descripcion}' width='16' align='left' />
			<col name='sec_secuencia' title='${lbl:b_sec_secuencia}' width='16' align='left' format='######' />
			<col name='sec_estatus_combo' title='${lbl:b_status}' width='16' align='left' />
			<col name='cue_fecha_registro' title='${lbl:b_store_date}' width='16' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
