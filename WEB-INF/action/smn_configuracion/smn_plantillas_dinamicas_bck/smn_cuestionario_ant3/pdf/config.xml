<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncuestionario.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_smn_cuestionario}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_smn_cuestionario}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smncuestionario.sql' width='100' spacingBefore='40'>
			<col name='cue_codigo' title='${lbl:b_cue_codigo}' width='14' align='left' />
			<col name='cue_descripcion' title='${lbl:b_cue_descripcion}' width='14' align='left' />
			<col name='smn_modulo_rf_combo' title='${lbl:b_smn_modulo_rf}' width='14' align='left' format='######' />
			<col name='smn_esquema_rf_combo' title='${lbl:b_smn_esquema_rf}' width='14' align='left' format='######' />
			<col name='smn_campo_rf_combo' title='${lbl:b_smn_campo_rf}' width='14' align='left' format='######' />
			<col name='cue_estatus_combo' title='${lbl:b_status}' width='14' align='left' />
			<col name='cue_fecha_registro' title='${lbl:b_store_date}' width='14' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
