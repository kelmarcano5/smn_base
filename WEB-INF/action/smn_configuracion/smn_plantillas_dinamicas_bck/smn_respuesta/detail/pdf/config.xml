<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_smn_respuesta}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_smn_respuesta}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_smn_respuesta}' width='60' spacingBefore='40'>
			<col name='cue_codigo_pl0' title='${lbl:b_smn_cuestionario_id}' align='left' />
			<col name='sec_codigo_pl1' title='${lbl:b_smn_seccion_id}' align='left' />
			<col name='prg_codigo_pl2' title='${lbl:b_smn_pregunta_id}' align='left' />
			<col name='tva_codigo_pl3' title='${lbl:b_smn_tipo_variable_id}' align='left' />
			<col name='smn_tipo_respuesta_id_combo' title='${lbl:b_smn_tipo_respuesta_id}' align='left' format='######' />
			<col name='smn_variable_id' title='${lbl:b_smn_variable}' align='left' format='######' />
			<col name='res_texto_respuesta' title='${lbl:b_res_texto_respuesta}' align='left' />
			<col name='res_idioma' title='${lbl:s_profile_lang}' align='left' />
			<col name='res_usuario' title='${lbl:b_users}' align='left' />
			<col name='res_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
			<col name='res_hora' title='${lbl:s_loginhist_col2}' align='left' />
		</record>


	</pdf-report>
</config>
