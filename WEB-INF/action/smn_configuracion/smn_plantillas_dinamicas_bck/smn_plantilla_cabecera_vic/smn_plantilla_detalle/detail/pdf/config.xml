<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_detail_stencil}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_detail_stencil}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_detail_stencil}' width='60' spacingBefore='40'>
			<col name='smn_plantilla_cabecera_id' title='${lbl:b_header_stencil}' align='left' format='######' />
			<col name='smn_seccion_rf' title='${lbl:b_section}' align='left' format='######' />
			<col name='pde_sec_seccion' title='${lbl:b_sec_section}' align='left' format='######' />
			<col name='smn_pregunta_rf' title='${lbl:b_question}' align='left' format='######' />
			<col name='pde_sec_pregunta' title='${lbl:b_sec_question}' align='left' format='######' />
			<col name='pde_status' title='${lbl:b_status}' align='left' />
			<col name='pde_idioma' title='${lbl:s_profile_lang}' align='left' />
			<col name='pde_usuario' title='${lbl:b_users}' align='left' />
			<col name='pde_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
			<col name='pde_hora' title='${lbl:s_loginhist_col2}' align='left' />
		</record>


	</pdf-report>
</config>
