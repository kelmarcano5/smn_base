<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_cuestionario_id_name' type='varchar' required='false' label='${lbl:b_smn_cuestionario_id}'/>
	<parameter id='smn_cuestionario_id' type='integer' required='false' label='${lbl:b_smn_cuestionario_id}' maxlen='10'/>
	<parameter id='sec_codigo' type='varchar' required='false' label='${lbl:b_sec_codigo}' maxlen='16'/>
	<parameter id='sec_descripcion' type='varchar' required='false' label='${lbl:b_sec_descripcion}' maxlen='100'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_cuestionario_id_name'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='sec_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
parameter='sec_descripcion'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='sec_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='sec_descripcion'/>



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
