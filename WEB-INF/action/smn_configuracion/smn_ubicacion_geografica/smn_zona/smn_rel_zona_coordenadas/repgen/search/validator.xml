<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_zona_id_name' type='varchar' required='false' label='${lbl:b_zone}'/>
	<parameter id='smn_zona_id' type='integer' required='false' label='${lbl:b_zone}' maxlen='10'/>
	<parameter id='smn_pais_rf' type='integer' required='false' label='${lbl:b_country}' maxlen='10'/>
	<parameter id='smn_entidad_federal_rf' type='integer' required='false' label='${lbl:b_federal_entity}' maxlen='10'/>
	<parameter id='smn_ciudad_rf' type='integer' required='false' label='${lbl:b_city}' maxlen='10'/>
	<parameter id='smn_municipio_rf' type='integer' required='false' label='${lbl:b_municipality}' maxlen='10'/>
	<parameter id='smn_parroquia_rf' type='integer' required='false' label='${lbl:b_parish}' maxlen='10'/>
	<parameter id='rzc_latitud' type='double' required='false' label='${lbl:b_longitude}' maxlen='10'/>
	<parameter id='rzc_longitud' type='double' required='false' label='${lbl:b_latitude}' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_zona_id_name'
		rule='contains' />



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
