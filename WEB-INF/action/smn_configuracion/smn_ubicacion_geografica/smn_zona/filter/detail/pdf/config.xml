<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		<recordset id='detail-smnrelzonacoordenadas.sql' source='session' scope='transaction' />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_zone}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_zone}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_zone}' width='60' spacingBefore='40'>
			<col name='zon_codigo' title='${lbl:b_code}' align='left' />
			<col name='zon_descripcion' title='${lbl:b_description}' align='left' />
			<col name='zon_estatus_combo' title='${lbl:b_status}' align='left' />
			<col name='zon_fecha_vigencia' title='${lbl:s_loginhist_col2}' align='left' format='dd-MM-yyyy' />
			<col name='zon_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>
		<table recordset='detail-smnrelzonacoordenadas.sql' width='100' spacingBefore='40'>
			<col name='smn_rel_zona_coordenadas_id' title='${lbl:b_relationship_zone_coordenate}' width='11' align='left' format='######' />
			<col name='smn_pais_rf_combo' title='${lbl:b_country}' width='11' align='left' format='######' />
			<col name='smn_entidad_federal_rf_combo' title='${lbl:b_federal_entity}' width='11' align='left' format='######' />
			<col name='smn_ciudad_rf_combo' title='${lbl:b_city}' width='11' align='left' format='######' />
			<col name='smn_municipio_rf_combo' title='${lbl:b_municipality}' width='11' align='left' format='######' />
			<col name='smn_parroquia_rf_combo' title='${lbl:b_parish}' width='11' align='left' format='######' />
			<col name='rzc_latitud' title='${lbl:b_longitude}' width='11' align='left' format='#,###,##0.00' />
			<col name='rzc_longitud' title='${lbl:b_latitude}' width='11' align='left' format='#,###,##0.00' />
			<col name='rzc_fecha_registro' title='${lbl:b_store_date}' width='11' align='left' format='dd-MM-yyyy' />
		</table>


	</pdf-report>
</config>
