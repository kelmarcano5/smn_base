<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='zon_codigo' type='varchar' required='true' maxlen='16'/>
	<parameter id='zon_descripcion' type='varchar' required='true' maxlen='100'/>
	<parameter id='zon_estatus' type='varchar' required='false' maxlen='2'/>


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='zon_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='zon_descripcion'/>



</validator>
