<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Actualiza valores de un formulario en una tabla
	</summary>

	<log>false</log>

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>dir_codigo</colname>
			<colname>dir_descripcion</colname>
			<colname>dir_pais</colname>
			<colname>dir_entidad_federal</colname>
			<colname>dir_ciudad</colname>
			<colname>dir_municipio</colname>
			<colname>dir_parroquia</colname>
			<colname>dir_zona_postal</colname>
			<colname>dir_tipo_via</colname>
			<colname>dir_tipo_via_nom</colname>
			<colname>dir_tipo_via_num</colname>
			<colname>dir_edificacion</colname>
			<colname>dir_edificacion_nom</colname>
			<colname>dir_edificacion_num</colname>
			<colname>dir_tipo_localidad</colname>
			<colname>dir_tipo_localidad_nom</colname>
			<colname>dir_apartado_postal</colname>
			<colname>dir_categoria</colname>
			<colname>dir_mapa_longitud</colname>
			<colname>dir_mapa_latitud</colname>
		
		</cols>
		<table>smn_base.smn_direccion</table>
		<oper>ACTUALIZAR</oper>
		<area>Carga de datos</area>
		<!--
			query para obtener el ID generado o nombre de 
			la columna que contiene el pkey, si es query, 
			el alias del campo debe ser "id"
		-->
		<pkey>id</pkey>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableTransaction</classname>
		<validator>true</validator>
		<transaction>true</transaction>
		<jdbc-log>false</jdbc-log>
	</transaction>

	<query>update.sql</query>

	<output>
		<classname>dinamica.GenericOutput</classname>
		<template>script.js</template>
		<set-http-headers>true</set-http-headers>
		<content-type>text/javascript; charset=iso-8859-1</content-type>
		<expiration>0</expiration>
	</output>

</config>
