<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smndireccion.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_addresses}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_addresses}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='dir_codigo' title='${lbl:b_code}'  align='left' />
			<col name='dir_descripcion' title='${lbl:b_description}'  align='left' />
			<col name='dir_pais' title='${lbl:b_country}'   align='left' />
			<col name='efe_nombre_corto' title='${lbl:b_federal_entity}'   align='left' />
			<col name='ciu_nombre_corto' title='${lbl:b_city}'   align='left' />
			<col name='mun_nombre_corto' title='${lbl:b_municipality}'   align='left' />
			<col name='prr_nombre_corto' title='${lbl:b_parish}'   align='left' />
			<col name='zpo_codigo' title='${lbl:b_postal_zone}'   align='left' />
			<col name='dir_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='left' />
			<col name='dir_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smndireccion.sql' width='100' spacingBefore='10'>
			<col name='dir_codigo' title='${lbl:b_code}' width='4' align='left' />
			<col name='dir_descripcion' title='${lbl:b_description}' width='4' align='left' />
			<col name='pai_nombre_corto' title='${lbl:b_country}' width='4' align='left'  />
			<col name='efe_nombre_corto' title='${lbl:b_federal_entity}' width='4' align='left'  />
			<col name='ciu_nombre_corto' title='${lbl:b_city}' width='4' align='left'  />
			<col name='mun_nombre_corto' title='${lbl:b_municipality}' width='4' align='left'  />
			<col name='prr_nombre_corto' title='${lbl:b_parish}' width='4' align='left'  />
			<col name='zpo_codigo' title='${lbl:b_postal_zone}' width='4' align='left'  />
			<col name='tiv_descripcion' title='${lbl:b_type_of_route}' width='4' align='left'  />
			<col name='tiv_descripcion_nom' title='${lbl:b_name}' width='4' align='left' />
			<col name='tiv_descripcion_num' title='${lbl:b_number}' width='4' align='left' />
			<col name='edf_descripcion' title='${lbl:b_edification}' width='4' align='left'  />
			<col name='edf_descripcion_nom' title='${lbl:b_name}' width='4' align='left' />
			<col name='edf_descripcion_num' title='${lbl:b_number}' width='4' align='left' />
			<col name='til_descripcion' title='${lbl:b_location_type}' width='4' align='left'  />
			<col name='til_descripcion_nom' title='${lbl:b_name}' width='4' align='left' />
			<col name='dir_apartado_postal' title='${lbl:b_postal_mail}' width='4' align='left' />
			<col name='dir_mapa_longitud' title='${lbl:b_longitude}' width='4' align='left' format='#,###,##0.00' />
			<col name='dir_mapa_latitud' title='${lbl:b_latitude}' width='4' align='left' format='#,###,##0.00' />
			<col name='dir_fecha_registro' title='${lbl:b_store_date}' width='4' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
