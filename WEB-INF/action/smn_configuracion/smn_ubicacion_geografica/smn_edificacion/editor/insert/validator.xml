<?xml version='1.0' encoding='ISO-8859-1'?>
<validator onerror='/action/error/validation/ajax'>
	<parameter id='edf_codigo' type='varchar' required='true' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='edf_descripcion' type='varchar' required='true' label='${lbl:b_description}' maxlen='48'/>	
	<parameter id='reference' type='varchar' required='false' label='Reference' maxlen='5' />

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='edf_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='edf_descripcion'/>


</validator>
