<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="false">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnentidadesfederales-template.sql" source="sql" scope="transaction" />
		<recordset id='query-smnpaises.sql' source='sql' scope='transaction' />
	</transaction>

	<output>
		<classname>domain.repgen.smn_configuracion.smn_ubicacion_geografica.smn_entidades_federales.ExcelReportOutput</classname>
	</output>
		
	<excel 
		filename='${lbl:b_federal_entities}.xls'
		header-background='true' >
		
	<sheet recordset="query-smnentidadesfederales-template.sql" sheetname="${lbl:b_federal_entities}">
		
		<col id='efe_paises' label='${lbl:b_country}' />
		<col id='efe_codigo' label='${lbl:b_code}' />
		<col id='efe_nombre_corto' label='${lbl:b_short_name}' />
		<col id='efe_nombre_largo' label='${lbl:b_long_name}' />
		
		<col id='efe_paises_reference' label='${lbl:b_country}' />

	</sheet>
		<sheet recordset='query-smnpaises.sql' sheetname='${lbl:b_country}'>
		<col id='pai_nombre_corto' label='${lbl:b_name}' />
	</sheet>

	</excel>

</config>
