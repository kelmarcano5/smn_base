<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='prr_municipios_desc' type='varchar' required='true' maxlen='48'/>
	<parameter id='prr_codigo' type='varchar' required='true' maxlen='16'/>
	<parameter id='prr_nombre_corto' type='varchar' required='true' maxlen='24'/>
	<parameter id='prr_nombre_largo' type='varchar' required='true' maxlen='48'/>

	<parameter id='prr_municipios_ref' type='integer' required='false' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_code_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='prr_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_name_not_duplicated}.'
			sql='buscarNombre.sql'
			id='prr_nombre_corto'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_name_not_duplicated}.'
			sql='buscarNombre.sql'
			id='prr_nombre_largo'/>


	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: ${lbl:b_municipality}' 
		parameter='prr_municipios_ref' 
		sql='prr_municipios.sql' 
		id='prr_municipios_ref'/>

</validator>
