<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='pai_codigo' type='varchar' required='true' maxlen='16'/>
	<parameter id='pai_nombre_corto' type='varchar' required='true' maxlen='24'/>
	<parameter id='pai_nombre_largo' type='varchar' required='true' maxlen='48'/>
	<parameter id='pai_gentilicio' type='varchar' required='true' maxlen='24'/>
	<parameter id='pai_codigo_ddi' type='varchar' required='true' maxlen='8'/>
	<parameter id='pai_idioma_oficial_desc' type='varchar' required='true' maxlen='48'/>
	<parameter id='pai_moneda_oficial_desc' type='varchar' required='true' maxlen='48'/>

	<parameter id='pai_idioma_oficial_ref' type='integer' required='false' maxlen='10'/>
	<parameter id='pai_moneda_oficial_ref' type='integer' required='false' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_code_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='pai_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_name_not_duplicated}.'
			sql='buscarNombre.sql'
			id='pai_nombre_largo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_code_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='pai_codigo_ddi'/>

	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: ${lbl:b_official_lenguage}' 
		parameter='pai_idioma_oficial_ref' 
		sql='pai_idioma_oficial.sql' 
		id='pai_idioma_oficial_ref'/>

	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: ${lbl:b_official_coin}' 
		parameter='pai_moneda_oficial_ref' 
		sql='pai_moneda_oficial.sql' 
		id='pai_moneda_oficial_ref'/>

</validator>
