<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="false">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnpaises-template.sql" source="sql" scope="transaction" />
		<recordset id='query-smnidiomas.sql' source='sql' scope='transaction' />
		<recordset id='query-smnmonedas.sql' source='sql' scope='transaction' />
	</transaction>

	<output>
		<classname>domain.repgen.smn_configuracion.smn_ubicacion_geografica.smn_paises.ExcelReportOutput</classname>
	</output>
		
	<excel 
		filename='${lbl:b_countries}.xls'
		header-background='true' >
		
	<sheet recordset="query-smnpaises-template.sql" sheetname="${lbl:b_countries}">
		
		<col id='pai_codigo' label='${lbl:b_code}' />
		<col id='pai_nombre_corto' label='${lbl:b_short_name}' />
		<col id='pai_nombre_largo' label='${lbl:b_long_name}' />
		<col id='pai_gentilicio' label='${lbl:b_citizenship}' />
		<col id='pai_codigo_ddi' label='${lbl:b_international_dailing_code}' />
		<col id='pai_idioma_oficial' label='${lbl:b_official_lenguage}' />
		<col id='pai_moneda_oficial' label='${lbl:b_official_coin}' />
		
		<col id='pai_idioma_oficial_reference' label='${lbl:b_official_lenguage}' />
		<col id='pai_moneda_oficial_reference' label='${lbl:b_official_coin}' />

	</sheet>
	
	<sheet recordset='query-smnidiomas.sql' sheetname='${lbl:b_official_lenguage}'>
		<col id='idi_descripcion' label='${lbl:b_description}' />
	</sheet>

	<sheet recordset='query-smnmonedas.sql' sheetname='${lbl:b_official_coin}'>
		<col id='mon_nombre' label='${lbl:b_name}' />
	</sheet>


	</excel>

</config>
