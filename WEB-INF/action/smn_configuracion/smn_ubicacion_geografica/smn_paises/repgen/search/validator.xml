<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='pai_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='pai_nombre_corto' type='varchar' required='false' label='${lbl:b_short_name}' maxlen='24'/>
	<parameter id='pai_nombre_largo' type='varchar' required='false' label='${lbl:b_long_name}' maxlen='48'/>
	<parameter id='pai_gentilicio' type='varchar' required='false' label='${lbl:b_citizenship}' maxlen='24'/>
	<parameter id='pai_codigo_ddi' type='varchar' required='false' label='${lbl:b_international_dailing_code}' maxlen='8'/>
	<parameter id='pai_idioma_oficial' type='integer' required='false' label='${lbl:b_official_lenguage}' maxlen='10'/>
	<parameter id='pai_moneda_oficial' type='integer' required='false' label='${lbl:b_official_coin}' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='pai_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='pai_nombre_corto'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='pai_nombre_largo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='pai_gentilicio'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='pai_codigo_ddi'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_code_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='pai_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_name_not_duplicated}.'
			sql='buscarNombre.sql'
			id='pai_nombre_largo'/>

	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='${lbl:b_at_least_field_report}.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
