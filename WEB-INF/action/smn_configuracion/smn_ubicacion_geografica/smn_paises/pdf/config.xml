<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnpaises.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_countries}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_countries}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnpaises.sql' width='100' spacingBefore='40'>
			<col name='pai_codigo' title='${lbl:b_code}' width='12' align='left' />
			<col name='pai_nombre_corto' title='${lbl:b_short_name}' width='12' align='left' />
			<col name='pai_nombre_largo' title='${lbl:b_long_name}' width='12' align='left' />
			<col name='pai_gentilicio' title='${lbl:b_citizenship}' width='12' align='left' />
			<col name='pai_codigo_ddi' title='${lbl:b_international_dailing_code}' width='12' align='left' />
			<col name='idi_descripcion' title='${lbl:b_official_lenguage}' width='12' align='left'  />
			<col name='mon_nombre' title='${lbl:b_official_coin}' width='12' align='left'  />
			<col name='pai_fecha_registro' title='${lbl:b_store_date}' width='12' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
