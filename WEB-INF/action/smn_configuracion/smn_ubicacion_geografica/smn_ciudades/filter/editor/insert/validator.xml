<?xml version='1.0' encoding='ISO-8859-1'?>
<validator onerror='/action/error/validation/ajax'>
	<parameter id='ciu_entidades_federales' type='integer' required='true' label='${lbl:b_federal_entity}' maxlen='10'/>
	<parameter id='ciu_codigo' type='varchar' required='true' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='ciu_nombre_corto' type='varchar' required='true' label='${lbl:b_short_name}' maxlen='24'/>
	<parameter id='ciu_nombre_largo' type='varchar' required='true' label='${lbl:b_long_name}' maxlen='48'/>
	<parameter id='reference' type='varchar' required='false' label='Reference' maxlen='5' />
	
	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='ciu_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='ciu_nombre_corto'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='ciu_nombre_largo'/>


</validator>
