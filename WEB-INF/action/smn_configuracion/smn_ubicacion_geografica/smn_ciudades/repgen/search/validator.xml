<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='ciu_entidades_federales' type='integer' required='false' label='${lbl:b_federal_entity}' maxlen='10'/>
	<parameter id='ciu_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='ciu_nombre_corto' type='varchar' required='false' label='${lbl:b_short_name}' maxlen='24'/>
	<parameter id='ciu_nombre_largo' type='varchar' required='false' label='${lbl:b_long_name}' maxlen='48'/>
	
	<parameter id='ciu_entidades_federales_filter' type='integer' required='false' label='${lbl:b_federal_entity}' maxlen='10'/>
	<parameter id='ciu_codigo_filter' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='ciu_nombre_largo_filter' type='varchar' required='false' label='${lbl:b_long_name}' maxlen='48'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ciu_codigo_filter'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ciu_nombre_largo_filter'
		rule='contains' />
		
	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ciu_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ciu_nombre_corto'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ciu_nombre_largo'
		rule='contains' />

	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='${lbl:b_at_least_field_report}.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
