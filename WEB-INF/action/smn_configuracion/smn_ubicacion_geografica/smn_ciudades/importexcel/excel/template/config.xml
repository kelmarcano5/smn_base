<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="false">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnciudades-template.sql" source="sql" scope="transaction" />
		<recordset id='query-smnentidadesfederales.sql' source='sql' scope='transaction' />
	</transaction>

	<output>
		<classname>domain.repgen.smn_configuracion.smn_ubicacion_geografica.smn_ciudades.ExcelReportOutput</classname>
	</output>
		
	<excel 
		filename='${lbl:b_cities}.xls'
		header-background='true' >
		
	<sheet recordset="query-smnciudades-template.sql" sheetname="${lbl:b_cities}">
		
		<col id='ciu_entidades_federales' label='${lbl:b_federal_entity}' />
		<col id='ciu_codigo' label='${lbl:b_code}' />
		<col id='ciu_nombre_corto' label='${lbl:b_short_name}' />
		<col id='ciu_nombre_largo' label='${lbl:b_long_name}' />
		
		<col id='ciu_entidades_federales_reference' label='${lbl:b_federal_entity}' />

	</sheet>
		<sheet recordset='query-smnentidadesfederales.sql' sheetname='${lbl:b_federal_entity}'>
		<col id='efe_nombre_corto' label='${lbl:b_name}' />
	</sheet>


	</excel>

</config>
