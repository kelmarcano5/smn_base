<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnciudades.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_cities}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_cities}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnciudades.sql' width='100' spacingBefore='40'>
			<col name='efe_nombre_largo' title='${lbl:b_federal_entity}' width='20' align='left'  />
			<col name='ciu_codigo' title='${lbl:b_code}' width='20' align='left' />
			<col name='ciu_nombre_corto' title='${lbl:b_short_name}' width='20' align='left' />
			<col name='ciu_nombre_largo' title='${lbl:b_long_name}' width='20' align='left' />
			<col name='ciu_fecha_registro' title='${lbl:b_store_date}' width='20' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
