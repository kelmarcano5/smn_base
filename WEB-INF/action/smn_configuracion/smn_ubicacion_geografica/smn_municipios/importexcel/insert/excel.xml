<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='mun_ciudades_desc' type='varchar' required='true' maxlen='48'/>
	<parameter id='mun_codigo' type='varchar' required='true' maxlen='16'/>
	<parameter id='mun_nombre_corto' type='varchar' required='true' maxlen='24'/>
	<parameter id='mun_nombre_largo' type='varchar' required='true' maxlen='48'/>

	<parameter id='mun_ciudades_ref' type='integer' required='false' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='mun_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='mun_nombre_corto'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='mun_nombre_largo'/>


	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
			on-error-label='${lbl:b_field_does_not_registered}: ${lbl:b_city}' 
			parameter='mun_ciudades_ref' 
			sql='mun_ciudades.sql' 
			id='mun_ciudades_ref'/>

</validator>
