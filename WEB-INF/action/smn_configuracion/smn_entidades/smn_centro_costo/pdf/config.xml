<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncentrocosto.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_cost_lefts}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_cost_lefts}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smncentrocosto.sql' width='100' spacingBefore='40'>
			<col name='cco_codigo' title='${lbl:b_code}' width='10' align='left' />
			<col name='cco_descripcion_corta' title='${lbl:b_short_description}' width='10' align='left' />
			<col name='cco_descripcion_larga' title='${lbl:b_long_description}' width='10' align='left' />
			<col name='ent_descripcion_corta' title='${lbl:b_entity}' width='10' align='left'  />
			<col name='suc_nombre' title='${lbl:b_subsidiary}' width='10' align='left'  />
			<col name='ase_descripcion' title='${lbl:b_service_area}' width='10' align='left'  />
			<col name='uns_descripcion' title='${lbl:b_service_unit}' width='10' align='left'  />
			<col name='alm_nombre' title='${lbl:b_store}' width='10' align='left'  />
			<col name='cco_nivel_combo' title='${lbl:b_level}' width='10' align='left' />
			<col name='cco_fecha_registro' title='${lbl:b_store_date}' width='10' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
