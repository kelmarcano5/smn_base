<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="3" cellStep="0" name="${lbl:b_corporations}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_corporations}' 
		filename='${lbl:b_corporations}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='crp_codigo' label='${lbl:b_code}' />
		<col id='crp_nombre' label='${lbl:b_name}' />
		<col id='uen_nombre' label='${lbl:b_business_unit}' />
		<col id='mon_nombre' label='${lbl:b_coin}' />
		<col id='dir_descripcion' label='${lbl:b_address}' />
		<col id='crp_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
