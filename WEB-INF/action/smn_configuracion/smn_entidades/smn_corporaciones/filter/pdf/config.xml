<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncorporaciones.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_corporations}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_corporations}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='crp_codigo' title='${lbl:b_code}'  align='left' />
			<col name='crp_nombre' title='${lbl:b_name}'  align='left' />
			<col name='crp_unidad_negocio' title='${lbl:b_business_unit}'   align='left' />
			<col name='mon_nombre' title='${lbl:b_coin}'   align='left' />
			<col name='crp_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='left' />
			<col name='crp_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smncorporaciones.sql' width='100' spacingBefore='10'>
			<col name='crp_codigo' title='${lbl:b_code}' width='16' align='left' />
			<col name='crp_nombre' title='${lbl:b_name}' width='16' align='left' />
			<col name='uen_nombre' title='${lbl:b_business_unit}' width='16' align='left'  />
			<col name='mon_nombre' title='${lbl:b_coin}' width='16' align='left'  />
			<col name='dir_descripcion' title='${lbl:b_address}' width='16' align='left'  />
			<col name='crp_fecha_registro' title='${lbl:b_store_date}' width='16' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
