<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="false">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncorporaciones-template.sql" source="sql" scope="transaction" />
		<recordset id='query-smndireccion.sql' source='sql' scope='transaction' />
		<recordset id='query-smnmonedas.sql' source='sql' scope='transaction' />
		<recordset id='query-smnunidadesnegocios.sql' source='sql' scope='transaction' />
	</transaction>

	<output>
		<classname>domain.repgen.smn_configuracion.smn_entidades.smn_corporaciones.ExcelReportOutput</classname>
	</output>
		
	<excel 
		filename='${lbl:b_corporations}.xls' 
		header-background='true' >
		
	<sheet recordset="query-smncorporaciones-template.sql" sheetname="${lbl:b_corporations}">
		
		<col id='crp_codigo' label='${lbl:b_code}' />
		<col id='crp_nombre' label='${lbl:b_name}' />
		<col id='crp_unidad_negocio' label='${lbl:b_business_unit}' />
		<col id='crp_moneda' label='${lbl:b_coin}' />
		<col id='crp_direccion' label='${lbl:b_address}' />
		
		<col id='crp_unidad_negocio_reference' label='${lbl:b_business_unit}' />
		<col id='crp_moneda_reference' label='${lbl:b_coin}' />
		<col id='crp_direccion_reference' label='${lbl:b_address}' />

	</sheet>
		<sheet recordset='query-smndireccion.sql' sheetname='${lbl:b_address}'>
		<col id='dir_descripcion' label='${lbl:b_description}' />
	</sheet>

	<sheet recordset='query-smnmonedas.sql' sheetname='${lbl:b_coin}'>
		<col id='mon_nombre' label='${lbl:b_name}' />
	</sheet>

	<sheet recordset='query-smnunidadesnegocios.sql' sheetname='${lbl:b_business_unit}'>
		<col id='uen_nombre' label='${lbl:b_name}' />
	</sheet>

	</excel>

</config>
