<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='crp_codigo' type='varchar' required='true' maxlen='16'/>
	<parameter id='crp_nombre' type='varchar' required='true' maxlen='48'/>
	<parameter id='crp_unidad_negocio_desc' type='varchar' required='false' maxlen='48'/>
	<parameter id='crp_moneda_desc' type='varchar' required='true' maxlen='48'/>
	<parameter id='crp_direccion_desc' type='varchar' required='false' maxlen='48'/>

	<parameter id='crp_unidad_negocio_ref' type='integer' required='false' maxlen='10'/>
	<parameter id='crp_moneda_ref' type='integer' required='false' maxlen='10'/>
	<parameter id='crp_direccion_ref' type='integer' required='false' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='crp_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='crp_nombre'/>


	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: crp_unidad_negocio' 
		parameter='crp_unidad_negocio_ref' 
		sql='crp_unidad_negocio.sql' 
		id='crp_unidad_negocio_ref'/>

	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: crp_moneda' 
		parameter='crp_moneda_ref' 
		sql='crp_moneda.sql' 
		id='crp_moneda_ref'/>

	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: crp_direccion' 
		parameter='crp_direccion_ref' 
		sql='crp_direccion.sql' 
		id='crp_direccion_ref'/>

</validator>
