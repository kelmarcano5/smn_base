<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_project}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_project}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_project}' width='60' spacingBefore='40'>
			<col name='pry_codigo' title='${lbl:b_code}' align='left' />
			<col name='pry_nombre' title='${lbl:b_name}' align='left' />
			<col name='smn_clase_auxiliar_rf' title='${lbl:b_class_auxiliary}' align='left' format='######' />
			<col name='smn_auxiliar_rf' title='${lbl:b_auxiliary}' align='left' format='######' />
			<col name='pry_fecha_inicio' title='${lbl:b_date_start}' align='left' format='dd-MM-yyyy' />
			<col name='pry_estatus' title='${lbl:b_status}' align='left' />
			<col name='pry_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
