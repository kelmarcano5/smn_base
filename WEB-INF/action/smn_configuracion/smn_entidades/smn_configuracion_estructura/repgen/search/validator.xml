<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='coe_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='coe_nombre' type='varchar' required='false' label='${lbl:b_name} ' maxlen='48'/>
	<parameter id='coe_niveles' type='integer' required='false' label='${lbl:b_levels}' maxlen='10'/>
	<parameter id='coe_mascara' type='varchar' required='false' label='${lbl:b_mask}' maxlen='48'/>
	<parameter id='coe_separador' type='varchar' required='false' label='${lbl:b_separator}' maxlen='1'/>
	
	<parameter id='coe_codigo_filter' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='coe_nombre_filter' type='varchar' required='false' label='${lbl:b_name} ' maxlen='48'/>
	<parameter id='coe_niveles_filter' type='integer' required='false' label='${lbl:b_levels}' maxlen='10'/>
	
	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='coe_codigo_filter'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='coe_nombre_filter'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='coe_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='coe_nombre'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='coe_mascara'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='coe_separador'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='coe_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='coe_nombre'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
