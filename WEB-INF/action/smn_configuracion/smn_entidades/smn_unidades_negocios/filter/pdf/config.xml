<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnunidadesnegocios.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_business_units}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_business_units}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='uen_codigo' title='${lbl:b_code}'  align='left' />
			<col name='uen_nombre' title='${lbl:b_name}'  align='left' />
			<col name='uen_responsable' title='${lbl:b_responsible}'  align='left' />
			<col name='uen_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='left' />
			<col name='uen_fecha_registro_fin' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnunidadesnegocios.sql' width='100' spacingBefore='10'>
			<col name='uen_codigo' title='${lbl:b_code}' width='12' align='left' />
			<col name='uen_nombre' title='${lbl:b_name}' width='12' align='left' />
			<col name='uen_responsable' title='${lbl:b_responsible}' width='12' align='left' />
			<col name='uen_direccion' title='${lbl:b_address}' width='12' align='left'  />
			<col name='uen_telefono_fijo' title='${lbl:b_fixed_phone}' width='12' align='left' />
			<col name='uen_telefono_movil' title='${lbl:b_mobile_phone}' width='12' align='left' />
			<col name='uen_email' title='${lbl:s_profile_email}' width='12' align='left' />
			<col name='uen_fecha_registro' title='${lbl:b_store_date}' width='12' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
