<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnentidades.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_entities}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_entities}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnentidades.sql' width='100' spacingBefore='40'>
			<col name='ent_codigo' title='${lbl:b_code}' width='5' align='left' />
			<col name='cmn_nombre' title='${lbl:b_community}' width='5' align='left'  />
			<col name='crp_nombre' title='${lbl:b_corporation}' width='5' align='left'  />
			<col name='uen_nombre' title='${lbl:b_business_unit}' width='5' align='left'  />
			<col name='ent_maneja_sucursal_combo' title='${lbl:b_has_subsidiary}' width='5' align='left' />
			<col name='mon_nombre' title='${lbl:b_currency}' width='5' align='left'  />
			<col name='sec_descripcion' title='${lbl:b_economic_sector}' width='5' align='left'  />
			<col name='ent_descripcion_corta' title='${lbl:b_short_description}' width='5' align='left' />
			<col name='ent_descripcion_larga' title='${lbl:b_long_description}' width='5' align='left' />
			<col name='ent_nro_id_fiscal' title='${lbl:b_tax_identification_number}' width='5' align='left' />
			<col name='dir_descripcion' title='${lbl:b_address}' width='5' align='left'  />
			<col name='ent_contacto' title='${lbl:b_contact_person}' width='5' align='left' />
			<col name='ent_telefono_fijo' title='${lbl:b_fixed_phone}' width='5' align='left' />
			<col name='ent_telefono_movil' title='${lbl:b_mobile_phone}' width='5' align='left' />
			<col name='ent_email' title='${lbl:s_profile_email}' width='5' align='left' />
			<col name='ent_act_economica' title='${lbl:b_economic_activity}' width='5' align='left' />
			<col name='smn_tipo_contribuyente_combo' title='${lbl:b_type_contribuyent}' align='left' />
			<col name='ent_fecha_registro' title='${lbl:b_store_date}' width='5' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
