<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_entities}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_entities}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_entities}' width='60' spacingBefore='40'>
			<col name='ent_codigo' title='${lbl:b_code}' align='left' />
			<col name='cmn_nombre' title='${lbl:b_community}' align='left'  />
			<col name='crp_nombre' title='${lbl:b_corporation}' align='left'  />
			<col name='uen_nombre' title='${lbl:b_business_unit}' align='left'  />
			<col name='ent_maneja_sucursal_combo' title='${lbl:b_has_subsidiary}' align='left' />
			<col name='mon_nombre' title='${lbl:b_currency}' align='left'  />
			<col name='sec_descripcion' title='${lbl:b_economic_sector}' align='left'  />
			<col name='ent_descripcion_corta' title='${lbl:b_short_description}' align='left' />
			<col name='ent_descripcion_larga' title='${lbl:b_long_description}' align='left' />
			<col name='ent_nro_id_fiscal' title='${lbl:b_tax_identification_number}' align='left' />
			<col name='dir_descripcion' title='${lbl:b_address}' align='left'  />
			<col name='ent_contacto' title='${lbl:b_contact_person}' align='left' />
			<col name='ent_telefono_fijo' title='${lbl:b_fixed_phone}' align='left' />
			<col name='ent_telefono_movil' title='${lbl:b_mobile_phone}' align='left' />
			<col name='ent_email' title='${lbl:s_profile_email}' align='left' />
			<col name='ent_act_economica' title='${lbl:b_economic_activity}' align='left' />
			<col name='ent_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
