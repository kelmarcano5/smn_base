<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='ent_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='ent_comunidad' type='integer' required='false' label='${lbl:b_community}' maxlen='8'/>
	<parameter id='ent_corporacion' type='integer' required='false' label='${lbl:b_corporation}' maxlen='8'/>
	<parameter id='ent_unidad_negocio' type='integer' required='false' label='${lbl:b_business_unit}' maxlen='10'/>
	<parameter id='ent_maneja_sucursal' type='varchar' required='false' label='${lbl:b_has_subsidiary}' maxlen='1'/>
	<parameter id='ent_moneda' type='integer' required='false' label='${lbl:b_currency}' maxlen='10'/>
	<parameter id='ent_sector_economico' type='integer' required='false' label='${lbl:b_economic_sector}' maxlen='10'/>
	<parameter id='ent_descripcion_corta' type='varchar' required='false' label='${lbl:b_short_description}' maxlen='24'/>
	<parameter id='ent_descripcion_larga' type='varchar' required='false' label='${lbl:b_long_description}' maxlen='56'/>
	<parameter id='ent_nro_id_fiscal' type='varchar' required='false' label='${lbl:b_tax_identification_number}' maxlen='12'/>
	<parameter id='ent_direccion' type='integer' required='false' label='${lbl:b_address}' maxlen='10'/>
	<parameter id='ent_contacto' type='varchar' required='false' label='${lbl:b_contact_person}' maxlen='56'/>
	<parameter id='ent_telefono_fijo' type='varchar' required='false' label='${lbl:b_fixed_phone}' maxlen='24'/>
	<parameter id='ent_telefono_movil' type='varchar' required='false' label='${lbl:b_mobile_phone}' maxlen='24'/>
	<parameter id='ent_email' type='varchar' required='false' label='${lbl:s_profile_email}' maxlen='96'/>
	<parameter id='ent_act_economica' type='varchar' required='false' label='${lbl:b_economic_activity}' maxlen='1024'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ent_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ent_maneja_sucursal'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
	parameter='ent_descripcion_corta'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
	parameter='ent_descripcion_larga'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ent_nro_id_fiscal'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ent_contacto'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ent_telefono_fijo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ent_telefono_movil'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ent_email'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='ent_act_economica'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='ent_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='ent_descripcion_corta'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='ent_descripcion_larga'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
