<?xml version='1.0' encoding='ISO-8859-1'?>
<validator onerror='/action/error/validation/ajax'>
	<parameter id='cmn_codigo' type='varchar' required='true' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='cmn_nombre' type='varchar' required='true' label='${lbl:b_name}' maxlen='48'/>
	<parameter id='cmn_unidad_negocio' type='integer' required='false' label='${lbl:b_business_unit}' maxlen='10'/>
	<parameter id='reference' type='varchar' required='false' label='Reference' maxlen='5' />
	
	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='cmn_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='cmn_nombre'/>


</validator>
