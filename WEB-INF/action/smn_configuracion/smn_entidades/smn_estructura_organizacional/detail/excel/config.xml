<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="3" cellStep="0" name="${lbl:b_organizational_position}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_organizational_position}' 
		filename='${lbl:b_organizational_position}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='coe_codigo_pl0' label='${lbl:b_structure_configuration}' />
		<col id='eor_codigo' label='${lbl:b_code}' />
		<col id='eor_nombre' label='${lbl:b_name}' />
		<col id='cco_descripcion_corta' label='${lbl:b_cost_centers}' />
		<col id='cla_nombre' label='${lbl:b_auxiliary_class}' />
		<col id='smn_item' label='${lbl:b_auxiliary}' />
		<col id='eor_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
