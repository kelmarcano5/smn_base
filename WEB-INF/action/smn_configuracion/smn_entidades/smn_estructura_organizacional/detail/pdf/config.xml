<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_organizational_position}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_organizational_position}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_organizational_position}' width='60' spacingBefore='40'>
			<col name='coe_codigo_pl0' title='${lbl:b_structure_configuration}' align='left'  />
			<col name='eor_codigo' title='${lbl:b_code}' align='left' />
			<col name='eor_nombre' title='${lbl:b_name}' align='left' />
			<col name='cco_descripcion_corta' title='${lbl:b_cost_lefts}' align='left'  />
			<col name='cla_nombre' title='${lbl:b_auxiliary_class}' align='left'  />
			<col name='smn_item' title='${lbl:b_auxiliary}' align='left'  />
			<col name='eor_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
