<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Ejecutar consulta y enrutar dependiendo de que un recordset
		tenga o no registros
	</summary>

	<log>false</log>

	<!--configura el control de paginacion-->
	<set-request-attribute id="paging.recordset" value="query-smnestructuraorganizacional.sql" />
	<set-request-attribute id="paging.pagesize" value="10" />

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>smn_configuracion_estructura_id</colname>
			<colname>eor_codigo</colname>
			<colname>eor_nombre</colname>
			<colname>eor_centro_costo</colname>
			<colname>eor_clase_auxiliar</colname>
			<colname>eor_auxiliar</colname>
			<colname>eor_fecha_registro_ini</colname>
			<colname>eor_fecha_registro_fin</colname>
		
		</cols>
		<table>smn_base.smn_estructura_organizacional</table>
		<oper>CONSULTA</oper>
		<area>Consulta</area>
		<!-- 
 			para auditoria de consulta permite obtener la cantidad de registro obtenidos
 			de la busqueda (opcional)
 		-->
		<recordCount recordset="query-smnestructuraorganizacional.sql"/>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableSearch</classname>
		<validator>true</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
	</transaction>
	
	<searchCols>eor_centro_costo;eor_nombre;eor_codigo;smn_configuracion_estructura_id;eor_fecha_registro_fin;eor_fecha_registro_ini;eor_auxiliar;eor_clase_auxiliar;</searchCols>

	<on-exit return-code="0" forward-to="/action/initview" />
	<on-exit return-code="1" forward-to="${def:actionroot}/notfound" />

</config>
