<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_configuracion_estructura_id' type='integer' required='false' label='${lbl:b_structure_configuration}' maxlen='10'/>
	<parameter id='eor_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='24'/>
	<parameter id='eor_nombre' type='varchar' required='false' label='${lbl:b_name}' maxlen='64'/>
	<parameter id='eor_centro_costo' type='integer' required='false' label='${lbl:b_cost_centers}' maxlen='2'/>
	<parameter id='eor_clase_auxiliar' type='integer' required='false' label='${lbl:b_auxiliary_class}' maxlen='10'/>
	<parameter id='eor_auxiliar' type='integer' required='false' label='${lbl:b_auxiliary}' maxlen='10'/>
	
	<parameter id='smn_configuracion_estructura_id_filter' type='integer' required='false' label='${lbl:b_structure_configuration}' maxlen='10'/>
	<parameter id='eor_codigo_filter' type='varchar' required='false' label='${lbl:b_code}' maxlen='24'/>
	<parameter id='eor_nombre_filter' type='varchar' required='false' label='${lbl:b_name}' maxlen='64'/>
	<parameter id='eor_centro_costo_filter' type='integer' required='false' label='${lbl:b_cost_centers}' maxlen='2'/>
	<parameter id='eor_clase_auxiliar_filter' type='integer' required='false' label='${lbl:b_auxiliary_class}' maxlen='10'/>
	<parameter id='eor_auxiliar_filter' type='integer' required='false' label='${lbl:b_auxiliary}' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='eor_codigo_filter'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='eor_nombre_filter'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='eor_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='eor_nombre'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='eor_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='eor_nombre'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
