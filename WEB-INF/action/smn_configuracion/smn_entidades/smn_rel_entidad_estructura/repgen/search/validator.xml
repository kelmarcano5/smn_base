<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_entidades_id_name' type='varchar' required='false' label='${lbl:b_entities}'/>
	<parameter id='smn_entidades_id' type='integer' required='false' label='${lbl:b_entities}' maxlen='10'/>
	<parameter id='smn_configuracion_estructura_id_name' type='varchar' required='false' label='${lbl:b_structure_organizational}'/>
	<parameter id='smn_configuracion_estructura_id' type='integer' required='false' label='${lbl:b_structure_organizational}' maxlen='10'/>
	<parameter id='rec_status' type='varchar' required='false' label='${lbl:b_status}' maxlen='1'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_entidades_id_name'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_configuracion_estructura_id_name'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='rec_status'
		rule='contains' />



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
