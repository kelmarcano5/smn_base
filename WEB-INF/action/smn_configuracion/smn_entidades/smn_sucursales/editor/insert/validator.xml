<?xml version='1.0' encoding='ISO-8859-1'?>
<validator onerror='/action/error/validation/ajax'>
	<parameter id='suc_empresa' type='integer' required='true' label='${lbl:b_entity}' maxlen='10'/>
	<parameter id='suc_codigo' type='varchar' required='true' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='suc_nombre' type='varchar' required='true' label='${lbl:b_name}' maxlen='48'/>
	<parameter id='suc_unidad_negocio' type='integer' required='false' label='${lbl:b_business_unit}' maxlen='10'/>
	<parameter id='suc_maneja_area_servicio' type='varchar' required='true' label='${lbl:b_has_service_area}' maxlen='1'/>
	<parameter id='suc_responsable' type='varchar' required='true' label='${lbl:b_responsible}' maxlen='48'/>
	<parameter id='suc_direccion' type='integer' required='true' label='${lbl:b_address}' maxlen='10'/>
	<parameter id='suc_telefono_fijo' type='varchar' required='true' label='${lbl:b_fixed_phone}' maxlen='24' regexp="00 \+\d{1,3} \(\d{1,4}\)\ \d{6,8}$" regexp-error-label="${lbl:b_error_incorrect_format_phone}."/>
	<parameter id='suc_telefono_movil' type='varchar' required='true' label='${lbl:b_mobile_phone}' maxlen='24' regexp="00 \+\d{1,3} \(\d{1,4}\)\ \d{6,8}$" regexp-error-label="${lbl:b_error_incorrect_format_phone}."/>
	<parameter id='suc_email' type='varchar' required='true' label='${lbl:s_profile_email}' maxlen='96'  regexp="^[_a-z0-9-]+(\.[_a-z0-9-]+)*@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,3})$" regexp-error-label="${lbl:b_email_format}." />
	<parameter id='reference' type='varchar' required='false' label='Reference' maxlen='5' />
	
	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='suc_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='suc_nombre'/>

	<custom-validator classname="dinamica.validators.RegExpValidator" 
	                  id="ent_telefono_fijo" 
	                  regexp="00 \+\d{1,3} \(\d{1,4}\) \d{6,8}$" 
	                  parameter="suc_telefono_fijo"
		              on-error-label="${lbl:b_error_incorrect_format_phone}."/>
		              
	<custom-validator classname="dinamica.validators.RegExpValidator" 
	                  id="ent_telefono_movil" 
	                  regexp="00 \+\d{1,3} \(\d{1,4}\) \d{6,8}$" 
	                  parameter="suc_telefono_movil"
		              on-error-label="${lbl:b_error_incorrect_format_phone}."/>


</validator>
