<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="false">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnpanel-template.sql" source="sql" scope="transaction" />
		<recordset id='query-sapplication.sql' source='sql' scope='transaction' />
		<recordset id='query-srole.sql' source='sql' scope='transaction' />
	</transaction>

	<output>
		<classname>domain.repgen.smn_configuracion.smn_sistema.smn_panel.ExcelReportOutput</classname>
	</output>
		
	<excel 
		filename='${lbl:b_panel}.xls'
		header-background='true' >
		
	<sheet recordset="query-smnpanel-template.sql" sheetname="${lbl:b_panel}">
	
		<col id='pan_service_description' label='${lbl:b_service_description}' />
		<col id='pan_service_path' label='${lbl:b_service_path}' />
		<col id='pan_icon_path' label='${lbl:b_icon_path}' />
		<col id='pan_app_id' label='${lbl:b_application}' />
		<col id='pan_role_id' label='${lbl:b_role}' />
		<col id='pan_orden' label='${lbl:b_order}' />
		
		<col id='pan_app_id_reference' label='${lbl:b_application}' />
		<col id='pan_role_id_reference' label='${lbl:b_role}' />

	</sheet>
	
	<sheet recordset='query-sapplication.sql' sheetname='${lbl:b_application}'>
		<col id='app_alias' label='${lbl:b_application}' />
	</sheet>

	<sheet recordset='query-srole.sql' sheetname='${lbl:b_role}'>
		<col id='rolename' label='${lbl:b_role}' />
	</sheet>

	</excel>

</config>
