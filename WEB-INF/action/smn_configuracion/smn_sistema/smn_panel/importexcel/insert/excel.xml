<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='pan_service_description' type='varchar' required='true' maxlen='350'/>
	<parameter id='pan_service_path' type='varchar' required='true' maxlen='150'/>
	<parameter id='pan_icon_path' type='varchar' required='true' maxlen='200'/>
	<parameter id='pan_app_id_desc' type='varchar' required='true' maxlen='20'/>
	<parameter id='pan_role_id_desc' type='varchar' required='true' maxlen='30'/>
	<parameter id='pan_orden' type='integer' required='true' maxlen='10'/>

	<parameter id='pan_app_id_ref' type='integer' required='false' maxlen='10'/>
	<parameter id='pan_role_id_ref' type='integer' required='false' maxlen='10'/>

	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: ${lbl:b_application}' 
		parameter='pan_app_id_ref' 
		sql='pan_app_id.sql' 
		id='pan_app_id_ref'/>

	<custom-validator 
		classname='dinamica.validators.GetColValueValidator' 
		on-error-label='${lbl:b_field_does_not_registered}: ${lbl:b_role}' 
		parameter='pan_role_id_ref' 
		sql='pan_role_id.sql' 
		id='pan_role_id_ref'/>

</validator>
