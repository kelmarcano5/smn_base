<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnpaneltraduccion.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_panel_translation}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_panel_translation}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnpaneltraduccion.sql' width='100' spacingBefore='40'>
			<col name='ent_descripcion_corta' title='${lbl:b_service_description}{select ${schema}s_service.service_id as id, ${schema}s_service.description || ' - ' || ${schema}s_service.path as item from ${schema}s_service order by ${schema}s_service.description}' width='25' align='left'  />
			<col name='pat_description' title='${lbl:b_description}' width='25' align='left' />
			<col name='pat_locale_combo' title='${lbl:b_idiom}' width='25' align='left' />
			<col name='pat_fecha_registro' title='${lbl:b_store_date}' width='25' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
