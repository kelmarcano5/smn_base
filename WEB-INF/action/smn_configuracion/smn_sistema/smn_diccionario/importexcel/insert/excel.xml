<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='dic_codigo' type='varchar' required='true' maxlen='20'/>
	<parameter id='dic_descripcion' type='varchar' required='true' maxlen='100'/>
	<parameter id='dic_esquema' type='varchar' required='true' maxlen='100'/>
	<parameter id='dic_tabla' type='varchar' required='true' maxlen='100'/>
	<parameter id='dic_campo' type='varchar' required='true' maxlen='100'/>
	<parameter id='dic_tipo_dato' type='varchar' required='true' maxlen='2'/>
	<parameter id='dic_tamano' type='integer' required='true' maxlen='10'/>
	<parameter id='dic_posicion_inicial' type='integer' required='true' maxlen='10'/>
	<parameter id='dic_posicion_final' type='integer' required='true' maxlen='10'/>
	<parameter id='dic_ruta' type='varchar' required='false' maxlen='100'/>
	<parameter id='dic_observacion' type='varchar' required='false' maxlen='200'/>
	<parameter id='dic_estatus' type='varchar' required='true' maxlen='1'/>
	<parameter id='dic_fecha_estatus' type='date' required='true' maxlen='10'/>
	<parameter id='dic_idioma' type='varchar' required='true' maxlen='2'/>
	<parameter id='dic_usuario_id' type='varchar' required='true' maxlen='10'/>
	<parameter id='dic_fecha_registro' type='date' required='true' maxlen='10'/>
	<parameter id='dic_hora' type='varchar' required='true' maxlen='8'/>


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='dic_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='dic_descripcion'/>


</validator>
