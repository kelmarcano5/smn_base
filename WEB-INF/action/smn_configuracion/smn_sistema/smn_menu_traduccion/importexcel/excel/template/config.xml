<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="false">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnmenutraduccion-template.sql" source="sql" scope="transaction" />
		<recordset id='query-sapplication.sql' source='sql' scope='transaction' />
		<recordset id='query-smenu.sql' source='sql' scope='transaction' />
		<recordset id='query-locale.sql' source='sql' scope='transaction' />
	</transaction>

	<output>
		<classname>domain.repgen.smn_configuracion.smn_sistema.smn_menu_traduccion.ExcelReportOutput</classname>
	</output>
		
	<excel 
		filename='${lbl:b_menu_translation}.xls'
		header-background='true' >
		
	<sheet recordset="query-smnmenutraduccion-template.sql" sheetname="${lbl:b_menu_translation}">
		
		<col id='mnt_app_id' label='${lbl:b_application}' />
		<col id='mnt_menu_id' label='${lbl:b_menu}' />
		<col id='mnt_title' label='${lbl:b_menu_title}' />
		<col id='mnt_locale_combo' label='${lbl:b_idiom}' />
		
		<col id='mnt_app_id_reference' label='${lbl:b_application}' />
		<col id='mnt_menu_id_reference' label='${lbl:b_menu}' />
		<col id='mnt_locale_combo_reference' label='${lbl:b_idiom}' />

	</sheet>
	
	<sheet recordset='query-sapplication.sql' sheetname='${lbl:b_application}'>
		<col id='app_alias' label='${lbl:b_application}' />
	</sheet>

	<sheet recordset='query-smenu.sql' sheetname='${lbl:b_menu}'>
		<col id='title' label='${lbl:b_menu}' />
	</sheet>

	<sheet recordset='query-locale.sql' sheetname='${lbl:b_idiom}'>
		<col id='languague' label='${lbl:b_idiom}' />
	</sheet>

	</excel>

</config>
