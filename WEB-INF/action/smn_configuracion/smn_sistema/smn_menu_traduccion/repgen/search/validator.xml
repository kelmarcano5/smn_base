<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='mnt_app_id' type='integer' required='false' label='${lbl:b_application}' maxlen='10'/>
	<parameter id='mnt_menu_id' type='integer' required='false' label='${lbl:b_menu}' maxlen='10'/>
	<parameter id='mnt_title' type='varchar' required='false' label='${lbl:b_menu_title}' maxlen='100'/>
	<parameter id='mnt_locale' type='varchar' required='false' label='${lbl:b_idiom}' maxlen='2'/>
	
	<parameter id='mnt_app_id_filter' type='integer' required='false' label='${lbl:b_application}' maxlen='10'/>
	<parameter id='mnt_menu_id_filter' type='integer' required='false' label='${lbl:b_menu}' maxlen='10'/>
	<parameter id='mnt_title_filter' type='varchar' required='false' label='${lbl:b_menu_title}' maxlen='100'/>
	<parameter id='mnt_locale_filter' type='varchar' required='false' label='${lbl:b_idiom}' maxlen='2'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='mnt_title_filter'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='mnt_locale_filter'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='mnt_title'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='mnt_locale'
		rule='contains' />

	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='${lbl:b_at_least_field_report}.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
