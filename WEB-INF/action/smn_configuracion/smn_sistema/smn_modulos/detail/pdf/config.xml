<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_modules}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_modules}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_modules}' width='60' spacingBefore='40'>
			<col name='ent_descripcion_corta_combo' title='${lbl:b_entity}' align='left'  />
			<col name='mod_codigo' title='${lbl:b_code}' align='left' />
			<col name='mod_nombre' title='${lbl:b_name}' align='left' />
			<col name='smn_app_rf_combo' title='${lbl:b_application}' align='left'  />
			<col name='mod_ruta_anexado' title='${lbl:b_ruta_anexados}' align='left' />
			<col name='mod_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
