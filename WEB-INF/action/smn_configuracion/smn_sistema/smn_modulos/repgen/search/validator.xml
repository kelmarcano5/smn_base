<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='mod_empresa' type='integer' required='false' label='${lbl:b_entity}' maxlen='10'/>
	<parameter id='mod_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='mod_nombre' type='varchar' required='false' label='${lbl:b_name}' maxlen='48'/>
	<parameter id='smn_app_rf' type='integer' required='false' label='${lbl:b_application}' maxlen='10'/>
	<parameter id='mod_ruta_anexado' type='varchar' required='false' label='${lbl:b_ruta_anexados}' maxlen='250'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='mod_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='mod_nombre'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='mod_ruta_anexado'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='mod_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='mod_nombre'/>



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
