<?xml version='1.0' encoding='ISO-8859-1'?>
<validator onerror='/action/error/validation/ajax'>
	<parameter id='mod_empresa' type='integer' required='true' label='${lbl:b_entity}' maxlen='10'/>
	<parameter id='mod_codigo' type='varchar' required='true' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='mod_nombre' type='varchar' required='true' label='${lbl:b_name}' maxlen='48'/>
	<parameter id='smn_app_rf' type='integer' required='true' label='${lbl:b_application}' maxlen='10'/>
	<parameter id='mod_ruta_anexado' type='varchar' required='true' label='${lbl:b_ruta_anexados}' maxlen='250'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='mod_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='mod_nombre'/>



</validator>
