<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnserviciotraduccion.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_service_translation}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_service_translation}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='set_app_id' title='${lbl:b_application}'   align='left' format='######' />
			<col name='set_menu_id' title='${lbl:b_menu}'   align='left' format='######' />
			<col name='set_servicio' title='${lbl:b_service_title}'  align='left' />
			<col name='set_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='left' />
			<col name='set_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnserviciotraduccion.sql' width='100' spacingBefore='10'>
			<col name='app_alias' title='${lbl:b_application}' width='16' align='left'  />
			<col name='title' title='${lbl:b_menu}' width='16' align='left'  />
			<col name='description' title='${lbl:b_service}' width='16' align='left'  />
			<col name='set_servicio' title='${lbl:b_service_title}' width='16' align='left' />
			<col name='set_locale_combo' title='${lbl:b_idiom}' width='16' align='left' />
			<col name='set_fecha_registro' title='${lbl:b_store_date}' width='16' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
