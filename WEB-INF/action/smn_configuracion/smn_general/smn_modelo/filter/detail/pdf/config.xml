<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		<recordset id='detail-smnrelmarcamodelo.sql' source='session' scope='transaction' />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_model}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_model}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_model}' width='60' spacingBefore='40'>
			<col name='mod_codigo' title='${lbl:b_code}' align='left' />
			<col name='mod_descripcion' title='${lbl:b_description}' align='left' />
			<col name='mod_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>
		<table recordset='detail-smnrelmarcamodelo.sql' width='100' spacingBefore='40'>
			<col name='smn_rel_marca_modelo_id' title='${lbl:b_relationship_brand_model}' width='33' align='left' format='######' />
		</table>


	</pdf-report>
</config>
