<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='eue_aplica_uen' type='varchar' required='false' label='${lbl:b_apply_business_unit}' maxlen='2'/>
	<parameter id='eue_aplica_auxiliar_uen' type='varchar' required='false' label='${lbl:b_apply_auxiliary}' maxlen='2'/>
	
	<parameter id='eue_aplica_uen_filter' type='varchar' required='false' label='${lbl:b_apply_business_unit}' maxlen='48'/>
	<parameter id='eue_aplica_auxiliar_uen_filter' type='varchar' required='false' label='${lbl:b_apply_auxiliary}' maxlen='48'/>
	
	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='eue_aplica_uen'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='eue_aplica_auxiliar_uen'
		rule='contains' />

	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='${lbl:b_at_least_field_report}.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
