<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnreltransdocumpaso.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_rel_trans_docum_paso}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_rel_trans_docum_paso}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_transaccion_general_rf' title='${lbl:b_transaccion_general}'  format='######' align='left' />
			<col name='smn_documentos_generales_rf' title='${lbl:b_documentos_generales}'  format='######' align='left' />
			<col name='smn_paso_id' title='${lbl:b_paso}'  format='######' align='left' />
			<col name='tpa_fecha_registro' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnreltransdocumpaso.sql' width='100' spacingBefore='10'>
			<col name='smn_transaccion_general_rf_combo' title='${lbl:b_transaccion_general}' width='14' align='left' format='######' />
			<col name='smn_documentos_generales_rf_combo' title='${lbl:b_documentos_generales}' width='14' align='left' format='######' />
			<col name='smn_paso_id_combo' title='${lbl:b_paso}' width='14' align='left' format='######' />
			<col name='tpa_tiempo_paso' title='${lbl:b_time_step}' width='14' align='left' format='######' />
			<col name='smn_nivel_aprobacion_inicial_rf_combo' title='${lbl:b_nivel_aprobacion_inicial}' width='14' align='left' format='######' />
			<col name='smn_nivel_aprobacion_final_rf_combo' title='${lbl:b_nivel_aprobacion_final}' width='14' align='left' format='######' />
			<col name='tpa_fecha_registro' title='${lbl:b_store_date}' width='14' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
