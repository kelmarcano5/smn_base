<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_rel_trans_docum_paso}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_rel_trans_docum_paso}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_rel_trans_docum_paso}' width='60' spacingBefore='40'>
			<col name='smn_transaccion_general_rf_combo' title='${lbl:b_transaccion_general}' align='left' format='######' />
			<col name='smn_documentos_generales_rf_combo' title='${lbl:b_documentos_generales}' align='left' format='######' />
			<col name='smn_paso_id_combo' title='${lbl:b_paso}' align='left' format='######' />
			<col name='tpa_tiempo_paso' title='${lbl:b_time_step}' align='left' format='######' />
			<col name='smn_nivel_aprobacion_inicial_rf_combo' title='${lbl:b_nivel_aprobacion_inicial}' align='left' format='######' />
			<col name='smn_nivel_aprobacion_final_rf_combo' title='${lbl:b_nivel_aprobacion_final}' align='left' format='######' />
			<col name='tpa_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
