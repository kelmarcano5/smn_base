<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='pas_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='10'/>
	<parameter id='pas_descripcion' type='varchar' required='false' label='${lbl:b_description}' maxlen='100'/>
	<parameter id='pas_cod_paso_anterior' type='varchar' required='false' label='${lbl:b_cod_last_step}' maxlen='10'/>
	<parameter id='pas_cod_paso_siguiente' type='varchar' required='false' label='${lbl:b_cod_next_step}' maxlen='10'/>
	<parameter id='pas_estatus_doc' type='varchar' required='false' label='${lbl:b_status_doc}' maxlen='1'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='pas_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
parameter='pas_descripcion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='pas_cod_paso_anterior'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='pas_cod_paso_siguiente'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='pas_estatus_doc'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='pas_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='pas_descripcion'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
