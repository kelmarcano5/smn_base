<?xml version='1.0' encoding='ISO-8859-1'?>
<validator maxErrors='20'>
	<parameter id='pas_codigo' type='varchar' required='true' maxlen='10'/>
	<parameter id='pas_descripcion' type='varchar' required='true' maxlen='100'/>
	<parameter id='pas_cod_paso_anterior' type='varchar' required='false' maxlen='10'/>
	<parameter id='pas_cod_paso_siguiente' type='varchar' required='false' maxlen='10'/>
	<parameter id='pas_estatus_doc' type='varchar' required='true' maxlen='1'/>


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='pas_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='pas_descripcion'/>


</validator>
