<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		<recordset id='detail-smnservicioscomponentes.sql' source='session' scope='transaction' />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_components}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_components}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_components}' width='60' spacingBefore='40'>
			<col name='cmp_codigo' title='${lbl:b_code}' align='left' />
			<col name='cmp_descripcion' title='${lbl:b_description}' align='left' />
			<col name='cmp_tipo_componente' title='${lbl:b_type_component}' align='left' />
			<col name='smn_grupo_componente_rf' title='${lbl:b_group_component}' align='left'  />
			<col name='cmp_forma_calculo' title='${lbl:b_calculus_form}' align='left' />
			<col name='cmp_vigencia_desde' title='${lbl:b_validation_date_from}' align='left' format='dd-MM-yyyy' />
			<col name='cmp_vigencia_hasta' title='${lbl:b_validation_date_to}' align='left' format='dd-MM-yyyy' />
			<col name='cmp_visible' title='${lbl:b_visible}' align='left' />
			<col name='cla_nombre' title='${lbl:b_auxiliary_class}' align='left'  />
			<col name='cmp_req_grupo_prestador' title='${lbl:b_require_providers_group}' align='left' />
			<col name='cmp_grupo_prestador' title='${lbl:b_group_of_provider}' align='left' />
			<col name='cmp_tiempo_estimado' title='${lbl:b_estimated_time}' align='left'  />
			<col name='smn_unidad_medida_rf' title='${lbl:b_measurement_unit}' align='left'  />
			<col name='smn_almacen_rf' title='${lbl:b_store}' align='left'  />
			<col name='smn_item_rf' title='${lbl:b_item}' align='left'  />
			<col name='smn_imprime' title='${lbl:b_print}' align='left'  />
			<col name='smn_grupo_titulo_impresion_rf' title='${lbl:b_group_title_print}' align='left'  />
			<col name='cmp_porcentaje' title='${lbl:b_percentage}' align='left' format='#,###,##0.00' />
			<col name='cmp_cantidad' title='${lbl:b_amount}' align='left' format='#,###,##0.00' />
			<col name='cmp_precio_moneda_local' title='${lbl:b_coin_local_price}' align='left' format='#,###,##0.00' />
			<col name='cmp_monto_moneda_local' title='${lbl:b_coin_local_amount}' align='left' format='#,###,##0.00' />
			<col name='smn_moneda_rf' title='${lbl:b_coin}' align='left'  />
			<col name='cmp_precio_moneda_alterna' title='${lbl:b_coin_altern_price}' align='left' format='#,###,##0.00' />
			<col name='cmp_monto_moneda_alterna' title='${lbl:b_coin_altern_amount}' align='left' format='#,###,##0.00' />
			<col name='cmp_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>
		<table recordset='detail-smnservicioscomponentes.sql' width='100' spacingBefore='40'>
			<col name='smn_servicios_componentes_id' title='${lbl:b_services_components}' width='50' align='left'  />
		</table>


	</pdf-report>
</config>
