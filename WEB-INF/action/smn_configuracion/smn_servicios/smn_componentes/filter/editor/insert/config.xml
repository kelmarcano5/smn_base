<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Insertar registro 
	</summary>

	<log>false</log>

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>cmp_codigo</colname>
			<colname>cmp_descripcion</colname>
			<colname>cmp_tipo_componente</colname>
			<colname>smn_grupo_componente_rf</colname>
			<colname>cmp_forma_calculo</colname>
			<colname>cmp_vigencia_desde</colname>
			<colname>cmp_vigencia_hasta</colname>
			<colname>cmp_visible</colname>
			<colname>cmp_clase_auxiliar_rf</colname>
			<colname>cmp_req_grupo_prestador</colname>
			<colname>smn_grupo_prestador_id</colname>
			<colname>cmp_tiempo_estimado</colname>
			<colname>smn_unidad_medida_rf</colname>
			<colname>smn_almacen_rf</colname>
			<colname>smn_item_rf</colname>
			<colname>smn_sub_tipo_gasto_rf</colname>
			<colname>smn_imprime</colname>
			<colname>smn_grupo_titulo_impresion_rf</colname>
			<colname>cmp_porcentaje</colname>
			<colname>cmp_cantidad</colname>
			<colname>cmp_precio_moneda_local</colname>
			<colname>cmp_monto_moneda_local</colname>
			<colname>smn_moneda_rf</colname>
			<colname>cmp_precio_moneda_alterna</colname>
			<colname>cmp_monto_moneda_alterna</colname>
			<colname>cmp_genera_grupo_prestador</colname>
			<colname>cmp_acumula_servicio</colname>
		
		</cols>
		<table>smn_base.smn_componentes</table>
		<oper>AÑADIR</oper>
		<area>Carga de datos</area>
		<!--
			query para obtener el ID generado o nombre de 
			la columna que contiene el pkey, si es query, 
			el alias del campo debe ser "id"
		-->
		<pkey>select ${seq:currval@smn_base.seq_smn_componentes} as id</pkey>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableTransaction</classname>
		<validator>true</validator>
		<transaction>true</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="nextval.sql" source="sql" scope="transaction" />
		<recordset id="query-smn_servicios.sql" source="request" scope="transaction" />
	</transaction>

	<query>insert.sql</query>
	<query params="query-smn_servicios.sql">insert-query-smn_servicios_componentes.sql</query>


	<output>
		<classname>dinamica.GenericOutput</classname>
		<template>script.js</template>
		<set-http-headers>true</set-http-headers>
		<content-type>text/javascript</content-type>
		<expiration>0</expiration>
		<print mode="form" recordset="_request" />
		<print mode="form" recordset="nextval.sql" />
	</output>
	
	<!-- Envio de email declarativo -->
	<mail enabled="false">
		<subject>Subject</subject>
		<mail-to>martin.cordova@gmail.com</mail-to>
		<body>body.txt</body>
	</mail>

</config>
