<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="2" cellStep="0" name="${lbl:b_group_title_print}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_group_title_print}' 
		filename='${lbl:b_group_title_print}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='gti_codigo' label='${lbl:b_code}' />
		<col id='gti_descripcion' label='${lbl:b_description}' />
		<col id='gti_estatus_combo' label='${lbl:b_status}' />
		<col id='gti_fecha_vigencia' label='${lbl:b_validation_date}' />
		<col id='gti_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
