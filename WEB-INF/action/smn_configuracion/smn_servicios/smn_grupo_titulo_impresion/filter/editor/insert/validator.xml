<?xml version='1.0' encoding='ISO-8859-1'?>
<validator onerror='/action/error/validation/ajax'>
	<parameter id='gti_codigo' type='varchar' required='true' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='gti_descripcion' type='varchar' required='true' label='${lbl:b_description}' maxlen='48'/>
	<parameter id='gti_estatus' type='varchar' required='false' label='${lbl:b_status}' maxlen='2'/>
	<parameter id='gti_fecha_vigencia' type='date' required='true' label='${lbl:b_validation_date}' maxlen='10'/>
	<parameter id='gti_orden' type='integer' required='true' label='${lbl:b_orden}' maxlen='48'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='gti_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='gti_descripcion'/>


</validator>
