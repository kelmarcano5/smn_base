<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnrelservtipodocanexo.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_relacion_servicio_tipo_doc_anexo}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_relacion_servicio_tipo_doc_anexo}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_servicios_id_name' title='${lbl:b_service}'  align='left' />
			<col name='smn_tipo_doc_anexo_id_name' title='${lbl:b_tipo_documento_anexo}'  align='left' />
			<col name='rst_fecha_registro_ini' title='${lbl:b_store_date_greather_than}'  format='dd-MM-yyyy' align='left' />
			<col name='rst_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnrelservtipodocanexo.sql' width='100' spacingBefore='10'>
			<col name='smn_servicios_id_combo' title='${lbl:b_service}' width='16' align='left' format='######' />
			<col name='smn_tipo_doc_anexo_id_combo' title='${lbl:b_tipo_documento_anexo}' width='16' align='left' format='######' />
			<col name='rst_idioma' title='${lbl:s_profile_lang}' width='16' align='left' />
			<col name='rst_usuario' title='${lbl:b_users}' width='16' align='left' />
			<col name='rst_fecha_registro' title='${lbl:b_store_date}' width='16' align='left' format='dd-MM-yyyy' />
			<col name='rst_hora' title='${lbl:s_loginhist_col2}' width='16' align='left' />

		</record>

	</pdf-report>
</config>
