<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Actualiza valores de un formulario en una tabla
	</summary>

	<log>false</log>

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>gpp_codigo</colname>
			<colname>gpp_descripcion</colname>
			<colname>gpp_area_servicio</colname>
			<colname>gpp_unidad_servicio</colname>
			<colname>gpp_orden_atencion</colname>
			<colname>gpp_estatus</colname>
			<colname>gpp_fecha_inicio_estatus</colname>
			<colname>gpp_fecha_final_estatus</colname>
			<colname>gpp_frecuencia</colname>
			<colname>gpp_is_pull</colname>
		</cols>
		<table>smn_base.smn_grupos_prestadores</table>
		<oper>ACTUALIZAR</oper>
		<area>Carga de datos</area>
		<!--
			query para obtener el ID generado o nombre de 
			la columna que contiene el pkey, si es query, 
			el alias del campo debe ser "id"
		-->
		<pkey>id</pkey>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableTransaction</classname>
		<validator>true</validator>
		<transaction>true</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smn_especialidad.sql" source="request" scope="transaction" />
		<recordset id="query-smn_agenda.sql" source="request" scope="transaction" />
	</transaction>

	<query>update.sql</query>
	<query>delete-query-smn_rel_grupos_prestadores_especialidad.sql</query>
	<query params="query-smn_especialidad.sql">insert-query-smn_rel_grupos_prestadores_especialidad.sql</query>
	<query>delete-query-smn_rel_grupos_prestadores_agenda.sql</query>
	<query params="query-smn_agenda.sql">insert-query-smn_rel_grupos_prestadores_agenda.sql</query>

	<output>
		<classname>dinamica.GenericOutput</classname>
		<template>script.js</template>
		<set-http-headers>true</set-http-headers>
		<content-type>text/javascript; charset=iso-8859-1</content-type>
		<expiration>0</expiration>
	</output>

</config>
