<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnservicios.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_service}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_service}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='svc_codigo' title='${lbl:b_code}'  align='left' />
			<col name='svc_descripcion' title='${lbl:b_description}'  align='left' />
			<col name='smn_tipo_servicio_rf' title='${lbl:b_service_type}'  format='######' align='left' />
			<col name='svc_frecuencia' title='${lbl:b_frecuency}'  format='######' align='left' />
			<col name='smn_clase_auxiliar_rf' title='${lbl:b_auxiliary_class}'  format='######' align='left' />
			<col name='svc_inactivo' title='${lbl:b_inactive}'  align='left' />
			<col name='svc_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='svc_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnservicios.sql' width='100' spacingBefore='10'>
			<col name='svc_codigo' title='${lbl:b_code}' width='14' align='left' />
			<col name='svc_descripcion' title='${lbl:b_description}' width='14' align='left' />
			<col name='smn_tipo_servicio_rf' title='${lbl:b_service_type}' width='14' align='left' format='######' />
			<col name='svc_frecuencia' title='${lbl:b_frecuency}' width='14' align='left' format='######' />
			<col name='smn_clase_auxiliar_rf' title='${lbl:b_auxiliary_class}' width='14' align='left' format='######' />
			<col name='svc_inactivo' title='${lbl:b_inactive}' width='14' align='left' />
			<col name='svc_fecha_registro' title='${lbl:b_store_date}' width='14' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
