<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_rel_services_area_unit}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_rel_services_area_unit}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_rel_services_area_unit}' width='60' spacingBefore='40'>
			<col name='svc_codigo_pl0' title='${lbl:b_service}' align='left' />
			<col name='smn_areas_servicios_rf' title='${lbl:b_service_area}' align='left' format='######' />
			<col name='smn_unidades_servicios_rf' title='${lbl:b_service_unit}' align='left' format='######' />
			<col name='smn_centro_costo_rf' title='${lbl:b_cost_lefts}' align='left' format='######' />
			<col name='rsa_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>
