<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='uim_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='uim_descripcion' type='varchar' required='false' label='${lbl:b_description}' maxlen='48'/>
	<parameter id='uim_moneda_referencia' type='integer' required='false' label='${lbl:b_referenced_coin}' maxlen='10'/>
	

	<parameter id='uim_codigo_filter' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='uim_descripcion_filter' type='varchar' required='false' label='${lbl:b_description}' maxlen='48'/>
	<parameter id='uim_moneda_referencia_filter' type='integer' required='false' label='${lbl:b_referenced_coin}' maxlen='10'/>
	
	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='uim_codigo_filter'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='uim_descripcion_filter'
		rule='contains' />	

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='uim_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='uim_descripcion'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_code_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='uim_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_desc_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='uim_descripcion'/>

	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='${lbl:b_at_least_field_report}.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
