<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='imp_codigo_filter' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='imp_descripcion_filter' type='varchar' required='false' label='${lbl:b_description}' maxlen='48'/>
	<parameter id='imp_tipo_persona_filter' type='varchar' required='false' label='${lbl:b_kind_of_person}' maxlen='48'/>
	<parameter id='imp_tipo_contribuyente_filter' type='varchar' required='false' label='${lbl:b_type_of_taxpayer}' maxlen='48'/>
	<parameter id='uim_id_filter' type='integer' required='false' label='${lbl:b_kind_of_person}' maxlen='10'/>
	
	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='imp_codigo_filter'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='imp_descripcion_filter'
		rule='contains' />
		
	<parameter id='imp_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='imp_descripcion' type='varchar' required='false' label='${lbl:b_description}' maxlen='48'/>
	<parameter id='imp_tipo_codigo' type='varchar' required='false' label='${lbl:b_code_type}' maxlen='2'/>
	<parameter id='imp_modalidad_registro' type='varchar' required='false' label='${lbl:b_where_is_registered}' maxlen='2'/>
	<parameter id='imp_porcentaje_base' type='double' required='false' label='${lbl:b_base_percentage}' maxlen='10'/>
	<parameter id='imp_porcentaje_calculo' type='double' required='false' label='${lbl:b_calculation_percentage}' maxlen='10'/>
	<parameter id='imp_tipo_libro' type='varchar' required='false' label='${lbl:b_book_type}' maxlen='2'/>
	<parameter id='imp_tipo_persona' type='varchar' required='false' label='${lbl:b_kind_of_person}' maxlen='2'/>
	<parameter id='imp_tipo_contribuyente' type='varchar' required='false' label='${lbl:b_type_of_taxpayer}' maxlen='2'/>
	<parameter id='imp_unidad_impositiva' type='integer' required='false' label='${lbl:b_tax_unit}' maxlen='10'/>
	<parameter id='imp_ui_minima' type='double' required='false' label='${lbl:b_minimum}' maxlen='10'/>
	<parameter id='imp_ui_maxima' type='double' required='false' label='${lbl:b_maximum}' maxlen='10'/>
	<parameter id='imp_ui_sustraendo' type='double' required='false' label='${lbl:b_subtrahend}' maxlen='10'/>
	<parameter id='imp_monto_minimo' type='double' required='false' label='${lbl:b_minimum}' maxlen='10'/>
	<parameter id='imp_monto_maximo' type='double' required='false' label='${lbl:b_maximum}' maxlen='10'/>
	<parameter id='imp_monto_sustraendo' type='double' required='false' label='${lbl:b_subtrahend} ${lbl:b_amount}' maxlen='10'/>
	
	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='imp_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='imp_descripcion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='imp_tipo_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='imp_modalidad_registro'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='imp_tipo_libro'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='imp_tipo_persona'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='imp_tipo_contribuyente'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_code_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='imp_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_desc_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='imp_descripcion'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_code_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='imp_tipo_codigo'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='${lbl:b_at_least_field_report}.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
