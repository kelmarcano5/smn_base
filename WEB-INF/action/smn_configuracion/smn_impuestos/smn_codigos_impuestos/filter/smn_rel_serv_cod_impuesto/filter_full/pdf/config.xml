<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnrelservcodimpuesto.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_relacion_servicio_codigos_impuestos}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='smn_codigos_impuestos_id_name' title='${lbl:b_taxes}'  align='left' />
			<col name='smn_servicios_id_name' title='${lbl:b_service}'  align='left' />
			<col name='rsi_fecha_registro_ini' title='${lbl:b_store_date_greather_than}'  format='dd-MM-yyyy' align='left' />
			<col name='rsi_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='left' />
		</record>
		<table recordset='query-smnrelservcodimpuesto.sql' width='100' spacingBefore='10'>
			<col name='smn_codigos_impuestos_id_combo' title='${lbl:b_taxes}' width='16' align='left' format='######' />
			<col name='smn_servicios_id_combo' title='${lbl:b_service}' width='16' align='left' format='######' />
			<col name='rsi_idioma' title='${lbl:s_profile_lang}' width='16' align='left' />
			<col name='rsi_usuario' title='${lbl:b_users}' width='16' align='left' />
			<col name='rsi_fecha_registro' title='${lbl:b_store_date}' width='16' align='left' format='dd-MM-yyyy' />
			<col name='rsi_hora' title='${lbl:s_loginhist_col2}' width='16' align='left' />
		</table>

	</pdf-report>
</config>
