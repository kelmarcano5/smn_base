<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_atributo_item_id_name' type='varchar' required='false' label='${lbl:b_atributos_item}'/>
	<parameter id='smn_atributo_item_id' type='integer' required='false' label='${lbl:b_atributos_item}' maxlen='10'/>
	<parameter id='atv_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='atv_descripcion' type='integer' required='false' label='${lbl:b_description}' maxlen='10'/>
	<parameter id='atv_fecha_vigencia_desde' type='date' required='false' label='${lbl:b_validation_date_from}' maxlen='10'/>
	<parameter id='atv_fecha_vigencia_hasta' type='date' required='false' label='${lbl:b_validation_date_until}' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_atributo_item_id_name'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='atv_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
parameter='atv_descripcion'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='atv_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarDescripcion.sql'
			id='atv_descripcion'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
