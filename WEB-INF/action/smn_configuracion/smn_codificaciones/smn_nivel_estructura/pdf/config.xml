<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnnivelestructura.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_nivel_estructura}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_nivel_estructura}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnnivelestructura.sql' width='100' spacingBefore='40'>
			<col name='smn_estructura_codigo_id_combo' title='${lbl:b_estructura_codigo}' width='16' align='left' format='######' />
			<col name='nes_niveles' title='${lbl:b_levels}' width='16' align='left' format='######' />
			<col name='nes_codigo' title='${lbl:b_code}' width='16' align='left' />
			<col name='nes_nombre' title='${lbl:b_name}' width='16' align='left' />
			<col name='nes_tipo_combo' title='${lbl:b_type}' width='16' align='left' />
			<col name='nes_fecha_registro' title='${lbl:b_store_date}' width='16' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
