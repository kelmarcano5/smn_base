<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_estructura_codigo_id_name' type='varchar' required='false' label='${lbl:b_estructura_codigo}'/>
	<parameter id='smn_estructura_codigo_id' type='integer' required='false' label='${lbl:b_estructura_codigo}' maxlen='10'/>
	<parameter id='nes_niveles' type='integer' required='false' label='${lbl:b_levels}' maxlen='10'/>
	<parameter id='nes_codigo' type='varchar' required='false' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='nes_nombre' type='varchar' required='false' label='${lbl:b_name}' maxlen='48'/>
	<parameter id='nes_tipo' type='varchar' required='false' label='${lbl:b_type}' maxlen='48'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_estructura_codigo_id_name'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_estructura_codigo_id'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='nes_codigo'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='nes_nombre'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='nes_tipo'
		rule='contains' />


	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='smn_estructura_codigo_id_name'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='smn_estructura_codigo_id'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarCodigo.sql'
			id='nes_codigo'/>

	<custom-validator
		classname='dinamica.validators.DuplicatedKeyValidator'
			on-error-label='${lbl:b_record_not_duplicated}.'
			sql='buscarNombre.sql'
			id='nes_nombre'/>


	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
