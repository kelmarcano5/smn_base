<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnnivelestructura.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_nivel_estructura}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_nivel_estructura}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='nes_codigo' title='${lbl:b_code}'  align='left' />
			<col name='nes_nombre' title='${lbl:b_name}'  align='left' />
			<col name='nes_fecha_registro_ini' title='${lbl:b_store_date_greather_than}'  format='dd-MM-yyyy' align='left' />
			<col name='nes_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnnivelestructura.sql' width='100' spacingBefore='10'>
			<col name='smn_estructura_codigo_id_combo' title='${lbl:b_estructura_codigo}' width='11' align='left' format='######' />
			<col name='nes_niveles' title='${lbl:b_levels}' width='11' align='left' format='######' />
			<col name='nes_codigo' title='${lbl:b_code}' width='11' align='left' />
			<col name='nes_nombre' title='${lbl:b_name}' width='11' align='left' />
			<col name='nes_tipo_combo' title='${lbl:b_type}' width='11' align='left' />
			<col name='nes_idioma' title='${lbl:s_profile_lang}' width='11' align='left' />
			<col name='nes_usuario' title='${lbl:b_users}' width='11' align='left' />
			<col name='nes_fecha_registro' title='${lbl:b_store_date}' width='11' align='left' format='dd-MM-yyyy' />
			<col name='nes_hora' title='${lbl:s_loginhist_col2}' width='11' align='left' />

		</record>

	</pdf-report>
</config>
