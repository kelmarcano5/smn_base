<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smntasasdecambio.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_exchange_rates}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_exchange_rates}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_monedas_id_name' title='${lbl:b_coin}'  align='left' />
			<col name='tca_moneda_referencia' title='${lbl:b_referenced_coin}'   align='left' />
			<col name='tca_fecha_vigencia_ini' title='${lbl:b_validation_date_from}'  format='dd-MM-yyyy' align='left' />
			<col name='tca_fecha_vigencia_fin' title='${lbl:b_validation_date_until}'  format='dd-MM-yyyy' align='left' />
			<col name='tca_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='left' />
			<col name='tca_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smntasasdecambio.sql' width='100' spacingBefore='10'>
			<col name='mon_nombre' title='${lbl:b_coin}' width='20' align='left' />
			<col name='mon_nombre' title='${lbl:b_referenced_coin}' width='20' align='left'  />
			<col name='tca_descripcion' title='${lbl:b_description}' width='20' align='left'  />
			<col name='tca_fecha_vigencia' title='${lbl:b_validation_date}' width='20' align='left' format='dd-MM-yyyy' />
			<col name='tca_tasa_cambio' title='${lbl:b_rate}' width='20' align='left' format='#,###,##0.00' />
			<col name='tca_tipo_tasa' title='${lbl:b_type}' width='20' align='left'  />
			<col name='tca_fecha_registro' title='${lbl:b_store_date}' width='20' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
