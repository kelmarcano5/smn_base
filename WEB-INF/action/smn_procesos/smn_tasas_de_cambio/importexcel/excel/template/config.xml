<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="false">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smntasasdecambio-template.sql" source="sql" scope="transaction" />
		<recordset id='query-smnmonedas.sql' source='sql' scope='transaction' />
	</transaction>

	<output>
		<classname>domain.repgen.smn_procesos.smn_tasas_de_cambio.ExcelReportOutput</classname>
	</output>
		
	<excel 
		filename='${lbl:b_exchange_rates}.xls' 
		header-background='true' >
		
	<sheet recordset="query-smntasasdecambio-template.sql" sheetname="${lbl:b_exchange_rates}">
		
		<col id='smn_monedas_id' label='${lbl:b_coin}' />
		<col id='tca_moneda_referencia' label='${lbl:b_referenced_coin}' />
		<col id='tca_fecha_vigencia' label='${lbl:b_validation_date}' />
		<col id='tca_tasa_cambio' label='${lbl:b_rate}' />
		
		<col id='smn_monedas_id_reference' label='${lbl:b_coin}' />
		<col id='tca_moneda_referencia_reference' label='${lbl:b_referenced_coin}' />

	</sheet>
	
	<sheet recordset='query-smnmonedas.sql' sheetname='${lbl:b_referenced_coin}'>
		<col id='mon_nombre' label='${lbl:b_name}' />
	</sheet>


	</excel>

</config>
