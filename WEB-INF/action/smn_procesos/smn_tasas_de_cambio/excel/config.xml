<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smntasasdecambio.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="2" cellStep="0" name="${lbl:b_exchange_rates}"/>
	
	<excel 
		recordset='query-smntasasdecambio.sql' 
		sheetname='${lbl:b_exchange_rates}' 
		filename='${lbl:b_exchange_rates}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='mon_nombre' label='${lbl:b_coin}' />
		<col id='mon_nombre' label='${lbl:b_referenced_coin}' />
		<col id='tca_descripcion' label='${lbl:b_description}' />
		<col id='tca_fecha_vigencia' label='${lbl:b_validation_date}' />
		<col id='tca_tasa_cambio' label='${lbl:b_rate}' />
		<col id='tca_tipo_tasa' label='${lbl:b_type}' />
		<col id='tca_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>
