<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='tca_fecha_vigencia_ini' type='date' required='false' label='${lbl:b_validation_date}' maxlen='10'/>
	<parameter id='tca_fecha_vigencia_fin' type='date' required='false' label='${lbl:b_validation_date}' maxlen='10'/>
	
	<parameter id='smn_monedas_id_name' type='varchar' required='false' label='${lbl:b_coin}'/>
	<parameter id='smn_monedas_id' type='integer' required='false' label='${lbl:b_coin}' maxlen='10'/>
	<parameter id='tca_moneda_referencia' type='integer' required='false' label='${lbl:b_referenced_coin}' maxlen='10'/>
	<parameter id='tca_tasa_cambio' type='double' required='false' label='${lbl:b_rate}' maxlen='10'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_monedas_id_name'
		rule='contains' />

	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='${lbl:b_at_least_field_report}.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>
