<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnservicios.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_services}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='svc_descripcion' title='${lbl:b_description}'  align='center' />
			<col name='svc_clase_auxiliar' title='${lbl:b_auxiliary_class}'  format='######' align='center' />
			<col name='svc_tipo_servicio' title='${lbl:b_service_type}'  format='######' align='center' />
			<col name='svc_area_servicio' title='${lbl:b_service_area}'  format='######' align='center' />
			<col name='svc_unidad_servicio' title='${lbl:b_service_unit}'  format='######' align='center' />
			<col name='svc_inactivo' title='${lbl:b_inactive}'  align='center' />
			<col name='svc_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='center' />
			<col name='svc_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='center' />
		</record>
		<table recordset='query-smnservicios.sql' width='100' spacingBefore='10'>
			<col name='svc_descripcion' title='${lbl:b_description}' width='14' align='left' />
			<col name='svc_clase_auxiliar' title='${lbl:b_auxiliary_class}' width='14' align='left' format='######' />
			<col name='svc_tipo_servicio' title='${lbl:b_service_type}' width='14' align='left' format='######' />
			<col name='svc_area_servicio' title='${lbl:b_service_area}' width='14' align='left' format='######' />
			<col name='svc_unidad_servicio' title='${lbl:b_service_unit}' width='14' align='left' format='######' />
			<col name='svc_inactivo_combo' title='${lbl:b_inactive}' width='14' align='left' />
			<col name='svc_fecha_registro' title='${lbl:b_store_date}' width='14' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>