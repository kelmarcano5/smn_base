<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		<recordset id='detail-smnperiodosdetalle.sql' source='session' scope='transaction' />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_periods}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_periods}' width='60' spacingBefore='40'>
			<col name='prd_codigo' title='${lbl:b_code}' align='left' />
			<col name='prd_descripcion' title='${lbl:b_description}' align='left' />
			<col name='prd_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>
		<table recordset='detail-smnperiodosdetalle.sql' width='100' spacingBefore='40'>
			<col name='pdl_num_periodo' title='${lbl:b_number_period}' width='25' align='left' format='######' />
			<col name='pdl_inicio_periodo' title='${lbl:b_start_period}' width='25' align='left' />
			<col name='pdl_final_periodo' title='${lbl:b_end_period}' width='25' align='left' />
			<col name='pdl_fecha_registro' title='${lbl:b_store_date}' width='25' align='left' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>