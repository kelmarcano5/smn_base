<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnprestadoresservicios.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_services_providers}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='smn_grupos_prestadores_id_name' title='${lbl:b_group_of_provider}'  align='center' />
			<col name='prs_nombres' title='${lbl:s_profile_fname}'  align='center' />
			<col name='prs_apellidos' title='${lbl:s_profile_lname}'  align='center' />
			<col name='prs_area_servicio' title='${lbl:b_service_area}'  format='######' align='center' />
			<col name='prs_clase_auxiliar' title='${lbl:b_auxiliary_class}'  format='######' align='center' />
			<col name='prs_auxiliar' title='${lbl:b_auxiliary}'  format='######' align='center' />
			<col name='prs_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='center' />
			<col name='prs_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='center' />
		</record>
		<table recordset='query-smnprestadoresservicios.sql' width='100' spacingBefore='10'>
			<col name='gpp_codigo_pl0' title='${lbl:b_group_of_provider}' width='14' align='left' />
			<col name='prs_nombres' title='${lbl:s_profile_fname}' width='14' align='left' />
			<col name='prs_apellidos' title='${lbl:s_profile_lname}' width='14' align='left' />
			<col name='prs_area_servicio' title='${lbl:b_service_area}' width='14' align='left' format='######' />
			<col name='prs_clase_auxiliar' title='${lbl:b_auxiliary_class}' width='14' align='left' format='######' />
			<col name='prs_auxiliar' title='${lbl:b_auxiliary}' width='14' align='left' format='######' />
			<col name='prs_fecha_registro' title='${lbl:b_store_date}' width='14' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>