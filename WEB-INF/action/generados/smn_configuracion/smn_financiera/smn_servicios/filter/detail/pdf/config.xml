<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_services}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_services}' width='60' spacingBefore='40'>
			<col name='svc_codigo' title='${lbl:b_code}' align='left' />
			<col name='svc_descripcion' title='${lbl:b_description}' align='left' />
			<col name='svc_clase_auxiliar' title='${lbl:b_auxiliary_class}' align='left' format='######' />
			<col name='svc_tipo_servicio' title='${lbl:b_service_type}' align='left' format='######' />
			<col name='svc_area_servicio' title='${lbl:b_service_area}' align='left' format='######' />
			<col name='svc_unidad_servicio' title='${lbl:b_service_unit}' align='left' format='######' />
			<col name='svc_centro_costo' title='${lbl:b_cost_centers}' align='left' format='######' />
			<col name='svc_frecuencia' title='${lbl:b_frecuency}' align='left' format='#,###,##0.00' />
			<col name='svc_precio_general' title='${lbl:b_general_price}' align='left' format='#,###,##0.00' />
			<col name='svc_inactivo_combo' title='${lbl:b_inactive}' align='left' />
			<col name='svc_req_honorario_combo' title='${lbl:b_require_honorary}' align='left' />
			<col name='svc_vigencia_desde' title='${lbl:b_validation_date_from}' align='left' format='dd-MM-yyyy' />
			<col name='svc_vigencia_hasta' title='${lbl:b_validation_date_to}' align='left' format='dd-MM-yyyy' />
			<col name='svc_requisitos' title='${lbl:b_requirements}' align='left' />
			<col name='svc_trans_general' title='${lbl:b_general_transaction}' align='left' format='######' />
			<col name='svc_compuesto' title='${lbl:b_id_compound}' align='left' format='######' />
			<col name='svc_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>

	</pdf-report>
</config>