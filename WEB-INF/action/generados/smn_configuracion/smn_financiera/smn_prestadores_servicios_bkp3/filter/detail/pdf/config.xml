<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		<recordset id='detail-smnprestadoresserviciosagenda.sql' source='session' scope='transaction' />
		<recordset id='detail-smnprestadoresserviciosespecialidad.sql' source='session' scope='transaction' />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_services_providers}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_services_providers}' width='60' spacingBefore='40'>
			<col name='prs_codigo' title='${lbl:b_code}' align='left' />
			<col name='prs_nombres' title='${lbl:s_profile_fname}' align='left' />
			<col name='prs_apellidos' title='${lbl:s_profile_lname}' align='left' />
			<col name='prs_area_servicio' title='${lbl:b_service_area}' align='left' format='######' />
			<col name='prs_unidad_servicio' title='${lbl:b_service_unit}' align='left' format='######' />
			<col name='prs_clase_auxiliar' title='${lbl:b_auxiliary_class}' align='left' format='######' />
			<col name='prs_auxiliar' title='${lbl:b_auxiliary}' align='left' format='######' />
			<col name='smn_grupos_prestadores' title='${lbl:b_group_of_provider}' align='left' format='######' />
			<col name='prs_direccion' title='${lbl:b_address}' align='left' format='######' />
			<col name='prs_telefono_fijo' title='${lbl:b_fixed_phone}' align='left' />
			<col name='prs_telefono_movil' title='${lbl:b_movile_phone}' align='left' />
			<col name='prs_frecuencia' title='${lbl:b_frecuency}' align='left' format='#,###,##0.00' />
			<col name='prs_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>
		<table recordset='detail-smnprestadoresserviciosagenda.sql' width='100' spacingBefore='40'>
		</table>
		<table recordset='detail-smnprestadoresserviciosespecialidad.sql' width='100' spacingBefore='40'>
		</table>

	</pdf-report>
</config>