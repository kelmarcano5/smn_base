<?xml version='1.0' encoding='ISO-8859-1'?>
<validator onerror='/action/error/validation/ajax'>
	<parameter id='trg_codigo' type='varchar' required='true' label='${lbl:b_code}' maxlen='16'/>
	<parameter id='trg_descripcion' type='varchar' required='true' label='${lbl:b_description}' maxlen='48'/>
	<parameter id='trg_modulo_origen' type='integer' required='true' label='${lbl:b_module}' maxlen='10'/>
	<parameter id='id' type='integer' required='true' label='${lbl:b_general_transaction}' maxlen='10'/>
	
	<custom-validator 
		classname='dinamica.validators.ArrayNotEmptyValidator' 
		on-error-label='Seleccione al menos un ítem.' 
		parameter-name='smn_modulos_id' 
		id='smn_modulos_id'/>
	
	<custom-validator 
		classname='dinamica.validators.ArrayToRecordset' 
		paramName='smn_modulos_id' 
		recordsetId='query-smn_modulos.sql' 
		colName='smn_modulos_id' 
		colType='integer'/>

</validator>

