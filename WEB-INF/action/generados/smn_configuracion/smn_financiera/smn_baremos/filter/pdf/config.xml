<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnbaremos.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_baremos}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='bar_codigo' title='${lbl:b_code}'  align='center' />
			<col name='bar_descripcion' title='${lbl:b_description}'  align='center' />
			<col name='bar_entidad' title='${lbl:b_entity}'  format='######' align='center' />
			<col name='bar_vigencia_desde' title='${lbl:b_validation_date_from}'  format='dd-MM-yyyy' align='center' />
			<col name='bar_vigencia_hasta' title='${lbl:b_validation_date_to}'  format='dd-MM-yyyy' align='center' />
			<col name='bar_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='center' />
			<col name='bar_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='center' />
		</record>
		<table recordset='query-smnbaremos.sql' width='100' spacingBefore='10'>
			<col name='bar_codigo' title='${lbl:b_code}' width='16' align='left' />
			<col name='bar_descripcion' title='${lbl:b_description}' width='16' align='left' />
			<col name='bar_entidad' title='${lbl:b_entity}' width='16' align='left' format='######' />
			<col name='bar_vigencia_desde' title='${lbl:b_validation_date_from}' width='16' align='left' format='dd-MM-yyyy' />
			<col name='bar_vigencia_hasta' title='${lbl:b_validation_date_to}' width='16' align='left' format='dd-MM-yyyy' />
			<col name='bar_fecha_registro' title='${lbl:b_store_date}' width='16' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>