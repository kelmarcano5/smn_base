<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Ejecutar consulta y enrutar dependiendo de que un recordset
		tenga o no registros
	</summary>

	<log>false</log>

	<!--configura el control de paginacion-->
	<set-request-attribute id="paging.recordset" value="query-smncomponentes.sql" />
	<set-request-attribute id="paging.pagesize" value="10" />

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>smn_grupos_prestadores_id</colname>
			<colname>smn_servicios_id</colname>
			<colname>cmp_descripcion</colname>
			<colname>cmp_area_servicio</colname>
			<colname>cmp_unidad_servicio</colname>
			<colname>cmp_clase_auxiliar</colname>
			<colname>cmp_tipo</colname>
			<colname>cmp_fecha_registro_ini</colname>
			<colname>cmp_fecha_registro_fin</colname>
		
		</cols>
		<table>smn_base.smn_componentes</table>
		<oper>CONSULTA</oper>
		<area>Consulta</area>
		<!-- 
 			para auditoria de consulta permite obtener la cantidad de registro obtenidos
 			de la busqueda (opcional)
 		-->
		<recordCount recordset="query-smncomponentes.sql"/>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableSearch</classname>
		<validator>true</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
	</transaction>
	
	<searchCols>smn_grupos_prestadores_id;smn_servicios_id;cmp_descripcion;cmp_area_servicio;cmp_unidad_servicio;cmp_clase_auxiliar;cmp_tipo;cmp_fecha_registro_ini;cmp_fecha_registro_fin;</searchCols>

	<on-exit return-code="0" forward-to="/action/initview" />
	<on-exit return-code="1" forward-to="${def:actionroot}/notfound" />

</config>
