<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_holidays}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_holidays}' width='60' spacingBefore='40'>
			<col name='fer_codigo' title='${lbl:b_code}' align='left' />
			<col name='fer_descripcion' title='${lbl:b_description}' align='left' />
			<col name='fer_pais' title='${lbl:b_country}' align='left' format='######' />
			<col name='fer_entidad_federal' title='${lbl:b_federal_entities}' align='left' format='######' />
			<col name='fer_ciudad' title='${lbl:b_city}' align='left' format='######' />
			<col name='fer_municipio' title='${lbl:b_municipality}' align='left' format='######' />
			<col name='fer_feriado' title='${lbl:b_holliday}' align='left' />
			<col name='fer_laborable_combo' title='${lbl:b_workable}' align='left' />
			<col name='fer_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>

	</pdf-report>
</config>