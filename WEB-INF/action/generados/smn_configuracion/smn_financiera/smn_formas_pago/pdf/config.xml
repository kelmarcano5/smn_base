<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnformaspago.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_way_to_pay}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<table recordset='query-smnformaspago.sql' width='100' spacingBefore='40'>
			<col name='fop_codigo' title='${lbl:b_code}' width='16' align='left' />
			<col name='fop_descripcion' title='${lbl:b_description}' width='16' align='left' />
			<col name='fop_medio_pago' title='${lbl:b_medio_pago}' width='16' align='left' format='######' />
			<col name='fop_requiere_banco_combo' title='${lbl:b_bank}' width='16' align='left' />
			<col name='fop_franquicia' title='${lbl:b_franquicias}' width='16' align='left' format='######' />
			<col name='fop_fecha_registro' title='${lbl:b_store_date}' width='16' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>