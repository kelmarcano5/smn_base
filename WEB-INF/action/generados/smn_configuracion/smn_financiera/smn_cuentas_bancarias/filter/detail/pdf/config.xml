<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_bank_accounts}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_bank_accounts}' width='60' spacingBefore='40'>
			<col name='cba_entidades_financieras' title='${lbl:b_financial_entity}' align='left' format='######' />
			<col name='cba_codigo' title='${lbl:b_code}' align='left' />
			<col name='cba_nombre' title='${lbl:b_name}' align='left' />
			<col name='cba_nro_cuenta' title='${lbl:b_bank_account_number}' align='left' />
			<col name='cba_tipo_cta_banco' title='${lbl:b_account_bank_type}' align='left' format='######' />
			<col name='cba_moneda' title='${lbl:b_coin}' align='left' format='######' />
			<col name='cba_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>

	</pdf-report>
</config>