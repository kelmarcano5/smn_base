<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_timetable}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_timetable}' width='60' spacingBefore='40'>
			<col name='age_codigo' title='${lbl:b_code}' align='left' />
			<col name='age_descripcion' title='${lbl:b_description}' align='left' />
			<col name='age_dia_semana_combo' title='${lbl:b_weekday}' align='left' />
			<col name='age_hora_desde' title='${lbl:b_time_since}' align='left' />
			<col name='age_hora_hasta' title='${lbl:b_time_until}' align='left' />
			<col name='age_localidad' title='${lbl:b_location}' align='left' />
			<col name='age_jornada_combo' title='${lbl:b_working_day}' align='left' />
			<col name='age_frecuencia' title='${lbl:b_frecuency}' align='left' format='#,###,##0.00' />
			<col name='age_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>

	</pdf-report>
</config>