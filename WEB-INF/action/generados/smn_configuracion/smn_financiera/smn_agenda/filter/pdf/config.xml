<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnagenda.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_timetable}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='age_codigo' title='${lbl:b_code}'  align='center' />
			<col name='age_descripcion' title='${lbl:b_description}'  align='center' />
			<col name='age_dia_semana' title='${lbl:b_weekday}'  align='center' />
			<col name='age_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='center' />
			<col name='age_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='center' />
		</record>
		<table recordset='query-smnagenda.sql' width='100' spacingBefore='10'>
			<col name='age_codigo' title='${lbl:b_code}' width='8' align='left' />
			<col name='age_descripcion' title='${lbl:b_description}' width='8' align='left' />
			<col name='age_dia_semana_combo' title='${lbl:b_weekday}' width='8' align='left' />
			<col name='age_hora_desde' title='${lbl:b_time_since}' width='8' align='left' />
			<col name='age_hora_hasta' title='${lbl:b_time_until}' width='8' align='left' />
			<col name='age_localidad' title='${lbl:b_location}' width='8' align='left' />
			<col name='age_jornada_combo' title='${lbl:b_working_day}' width='8' align='left' />
			<col name='age_frecuencia' title='${lbl:b_frecuency}' width='8' align='right' format='#,###,##0.00' />
			<col name='age_idioma' title='${lbl:s_profile_lang}' width='8' align='left' />
			<col name='age_usuario' title='${lbl:b_users}' width='8' align='left' />
			<col name='age_fecha_registro' title='${lbl:b_store_date}' width='8' align='center' format='dd-MM-yyyy' />
			<col name='age_hora' title='${lbl:s_loginhist_col2}' width='8' align='left' />
		</table>

	</pdf-report>
</config>