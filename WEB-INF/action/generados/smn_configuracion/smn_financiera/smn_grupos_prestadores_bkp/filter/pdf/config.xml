<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smngruposprestadores.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_groups_of_providers}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='gpp_codigo' title='${lbl:b_code}'  align='center' />
			<col name='gpp_descripcion' title='${lbl:b_description}'  align='center' />
			<col name='gpp_area_servicio' title='${lbl:b_service_area}'  format='######' align='center' />
			<col name='gpp_unidad_servicio' title='${lbl:b_service_unit}'  format='######' align='center' />
			<col name='gpp_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='center' />
			<col name='gpp_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='center' />
		</record>
		<table recordset='query-smngruposprestadores.sql' width='100' spacingBefore='10'>
			<col name='gpp_codigo' title='${lbl:b_code}' width='16' align='left' />
			<col name='gpp_descripcion' title='${lbl:b_description}' width='16' align='left' />
			<col name='gpp_area_servicio' title='${lbl:b_service_area}' width='16' align='left' format='######' />
			<col name='gpp_unidad_servicio' title='${lbl:b_service_unit}' width='16' align='left' format='######' />
			<col name='gpp_orden_atencion_combo' title='${lbl:b_in_order_of_attention}' width='16' align='left' />
			<col name='gpp_fecha_registro' title='${lbl:b_store_date}' width='16' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>