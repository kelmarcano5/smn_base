<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		<recordset id='detail-smnbaremosdetalle.sql' source='session' scope='transaction' />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_baremos}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_baremos}' width='60' spacingBefore='40'>
			<col name='bar_codigo' title='${lbl:b_code}' align='left' />
			<col name='bar_descripcion' title='${lbl:b_description}' align='left' />
			<col name='bar_entidad' title='${lbl:b_entity}' align='left' format='######' />
			<col name='bar_tipo_combo' title='${lbl:b_type}' align='left' />
			<col name='bar_vigencia_desde' title='${lbl:b_validation_date_from}' align='left' format='dd-MM-yyyy' />
			<col name='bar_vigencia_hasta' title='${lbl:b_validation_date_to}' align='left' format='dd-MM-yyyy' />
			<col name='bar_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>
		<table recordset='detail-smnbaremosdetalle.sql' width='100' spacingBefore='40'>
			<col name='smn_baremos_detalle_id' title='${lbl:b_baremo}' width='7' align='left' format='######' />
			<col name='bad_tipo_combo' title='${lbl:b_type}' width='7' align='left' />
			<col name='bad_auxiliar' title='${lbl:b_auxiliary}' width='7' align='left' format='######' />
			<col name='bad_servicio' title='${lbl:b_service}' width='7' align='left' format='######' />
			<col name='bad_tipo_compuesto_combo' title='${lbl:b_type_compound}' width='7' align='left' />
			<col name='bad_codigo_articulo' title='${lbl:b_item_code}' width='7' align='left' />
			<col name='bad_almacen' title='${lbl:b_store_code}' width='7' align='left' format='######' />
			<col name='bad_calculo_combo' title='${lbl:b_calculus}' width='7' align='left' />
			<col name='bad_cantidad' title='${lbl:b_amount}' width='7' align='left' format='#,###,##0.00' />
			<col name='bad_precio' title='${lbl:b_price}' width='7' align='left' format='#,###,##0.00' />
			<col name='bad_porcentaje' title='${lbl:b_percentage}' width='7' align='left' format='#,###,##0.00' />
			<col name='bad_inactivo_combo' title='${lbl:b_inactive}' width='7' align='left' />
			<col name='bad_fecha_registro' title='${lbl:b_store_date}' width='7' align='left' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>