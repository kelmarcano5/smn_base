<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_cities}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_cities}' width='60' spacingBefore='40'>
			<col name='ciu_entidades_federales' title='${lbl:b_federal_entity}' align='left' format='######' />
			<col name='ciu_codigo' title='${lbl:b_code}' align='left' />
			<col name='ciu_nombre_corto' title='${lbl:b_short_name}' align='left' />
			<col name='ciu_nombre_largo' title='${lbl:b_long_name}' align='left' />
			<col name='ciu_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>

	</pdf-report>
</config>