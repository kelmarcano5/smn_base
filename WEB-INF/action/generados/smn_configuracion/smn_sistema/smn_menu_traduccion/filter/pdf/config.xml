<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnmenutraduccion.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_menu_translation}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='mnt_app_id' title='${lbl:b_application}'  format='######' align='center' />
			<col name='mnt_menu_id' title='${lbl:b_menu}'  format='######' align='center' />
			<col name='mnt_title' title='${lbl:b_menu_title}'  align='center' />
			<col name='mnt_idioma' title='${lbl:s_profile_lang}'  align='center' />
			<col name='mnt_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='center' />
			<col name='mnt_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='center' />
		</record>
		<table recordset='query-smnmenutraduccion.sql' width='100' spacingBefore='10'>
			<col name='mnt_app_id' title='${lbl:b_application}' width='20' align='left' format='######' />
			<col name='mnt_menu_id' title='${lbl:b_menu}' width='20' align='left' format='######' />
			<col name='mnt_title' title='${lbl:b_menu_title}' width='20' align='left' />
			<col name='mnt_locale_combo' title='${lbl:b_idiom}' width='20' align='left' />
			<col name='mnt_fecha_registro' title='${lbl:b_store_date}' width='20' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>