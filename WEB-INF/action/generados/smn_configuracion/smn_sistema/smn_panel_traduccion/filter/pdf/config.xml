<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnpaneltraduccion.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_panel_translation}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='pat_panel' title='${lbl:b_panel}'  format='######' align='center' />
			<col name='pat_description' title='${lbl:b_description}'  align='center' />
			<col name='pat_locale' title='${lbl:b_idiom}'  align='center' />
			<col name='pat_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='center' />
			<col name='pat_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='center' />
		</record>
		<table recordset='query-smnpaneltraduccion.sql' width='100' spacingBefore='10'>
			<col name='pat_panel_combo' title='${lbl:b_panel}' width='25' align='left' format='######' />
			<col name='pat_description' title='${lbl:b_description}' width='25' align='left' />
			<col name='pat_locale_combo' title='${lbl:b_idiom}' width='25' align='left' />
			<col name='pat_fecha_registro' title='${lbl:b_store_date}' width='25' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>