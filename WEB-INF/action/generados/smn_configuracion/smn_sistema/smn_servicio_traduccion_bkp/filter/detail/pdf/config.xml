<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_service_translation}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_service_translation}' width='60' spacingBefore='40'>
			<col name='set_app_id' title='${lbl:b_application}' align='left' format='######' />
			<col name='set_menu_id' title='${lbl:b_menu}' align='left' format='######' />
			<col name='set_servicio_id' title='${lbl:b_service}' align='left' format='######' />
			<col name='set_servicio' title='${lbl:b_service_title}' align='left' />
			<col name='set_locale_combo' title='${lbl:b_idiom}' align='left' />
			<col name='set_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>

	</pdf-report>
</config>