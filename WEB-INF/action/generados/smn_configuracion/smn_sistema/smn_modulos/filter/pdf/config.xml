<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnmodulos.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_modules}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='mod_empresa' title='${lbl:b_entity}'  format='######' align='center' />
			<col name='mod_codigo' title='${lbl:b_code}'  align='center' />
			<col name='mod_nombre' title='${lbl:b_name}'  align='center' />
			<col name='mod_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='center' />
			<col name='mod_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='center' />
		</record>
		<table recordset='query-smnmodulos.sql' width='100' spacingBefore='10'>
			<col name='mod_empresa' title='${lbl:b_entity}' width='25' align='left' format='######' />
			<col name='mod_codigo' title='${lbl:b_code}' width='25' align='left' />
			<col name='mod_nombre' title='${lbl:b_name}' width='25' align='left' />
			<col name='mod_fecha_registro' title='${lbl:b_store_date}' width='25' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>