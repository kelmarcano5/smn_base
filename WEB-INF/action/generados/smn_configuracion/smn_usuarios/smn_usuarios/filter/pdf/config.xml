<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnusuarios.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_users}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='smn_entidades_id_name' title='${lbl:b_entity}'  align='center' />
			<col name='usr_comunidad' title='${lbl:b_community}'  format='######' align='center' />
			<col name='usr_nombres' title='${lbl:s_profile_fname}'  align='center' />
			<col name='usr_apellidos' title='${lbl:s_profile_lname}'  align='center' />
			<col name='usr_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='center' />
			<col name='usr_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='center' />
		</record>
		<table recordset='query-smnusuarios.sql' width='100' spacingBefore='10'>
			<col name='ent_codigo_pl0' title='${lbl:b_entity}' width='6' align='left' />
			<col name='usr_usuario_id' title='${lbl:b_user}' width='6' align='left' format='######' />
			<col name='usr_comunidad' title='${lbl:b_community}' width='6' align='left' format='######' />
			<col name='usr_nombres' title='${lbl:s_profile_fname}' width='6' align='left' />
			<col name='usr_apellidos' title='${lbl:s_profile_lname}' width='6' align='left' />
			<col name='usr_nacionalidad' title='${lbl:b_citizenship}' width='6' align='left' format='######' />
			<col name='usr_nro_doc_identidad' title='${lbl:b_identification_doc_number}' width='6' align='left' />
			<col name='usr_nro_id_fiscal' title='${lbl:b_tax_identification_number}' width='6' align='left' />
			<col name='usr_direccion' title='${lbl:b_address}' width='6' align='left' format='######' />
			<col name='usr_email' title='${lbl:s_profile_email}' width='6' align='left' />
			<col name='usr_telefono_fijo' title='${lbl:b_fixed_phone}' width='6' align='left' />
			<col name='usr_telefono_movil' title='${lbl:b_mobile_phone}' width='6' align='left' />
			<col name='usr_idioma' title='${lbl:s_profile_lang}' width='6' align='left' />
			<col name='usr_usuario' title='${lbl:b_users}' width='6' align='left' />
			<col name='usr_fecha_registro' title='${lbl:b_store_date}' width='6' align='left' format='dd-MM-yyyy' />
			<col name='usr_hora' title='${lbl:s_loginhist_col2}' width='6' align='left' />
		</table>

	</pdf-report>
</config>