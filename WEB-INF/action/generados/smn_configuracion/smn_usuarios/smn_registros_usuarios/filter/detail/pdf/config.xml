<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_register_users}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_register_users}' width='60' spacingBefore='40'>
			<col name='rgu_tipo_doc_oficial' title='${lbl:b_official_document_type}' align='left' format='######' />
			<col name='rgu_num_doc_oficial' title='${lbl:b_official_document_number}' align='left' />
			<col name='rgu_nro_id_fiscal' title='${lbl:b_tax_identification_number}' align='left' />
			<col name='rgu_nombres' title='${lbl:s_profile_fname}' align='left' />
			<col name='rgu_apellidos' title='${lbl:s_profile_lname}' align='left' />
			<col name='rgu_tipo_registro' title='${lbl:b_register_type}' align='left' format='######' />
			<col name='rgu_email' title='${lbl:s_profile_email}' align='left' />
			<col name='rgu_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>

	</pdf-report>
</config>