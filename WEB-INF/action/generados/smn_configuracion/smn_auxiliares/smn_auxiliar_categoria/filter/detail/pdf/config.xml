<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_auxiliary}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_auxiliary}' width='60' spacingBefore='40'>
			<col name='aca_naturaleza_auxiliar' title='${lbl:b_nature_auxiliary}' align='left' format='######' />
			<col name='aca_tipo_persona_combo' title='${lbl:b_kind_of_person}' align='left' />
			<col name='aca_empresa' title='${lbl:b_entity}' align='left' format='######' />
			<col name='aca_sucursal' title='${lbl:b_subsidiary}' align='left' format='######' />
			<col name='aca_unidad_negocio' title='${lbl:b_business_unit}' align='left' format='######' />
			<col name='aca_area_servicio' title='${lbl:b_service_area}' align='left' format='######' />
			<col name='aca_unidad_servicio' title='${lbl:b_service_unit}' align='left' format='######' />
			<col name='aca_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>

	</pdf-report>
</config>