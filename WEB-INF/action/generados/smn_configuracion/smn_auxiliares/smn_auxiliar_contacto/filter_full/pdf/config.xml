<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnauxiliarcontacto.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_auxiliary_contact}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='acn_telefono_fijo' title='${lbl:b_fixed_phone}'  align='center' />
		</record>
		<table recordset='query-smnauxiliarcontacto.sql' width='100' spacingBefore='10'>
			<col name='acn_telefono_fijo' title='${lbl:b_fixed_phone}' width='12' align='left' />
			<col name='acn_telefono_movil' title='${lbl:b_mobile_phone}' width='12' align='left' />
			<col name='acn_email' title='${lbl:s_profile_email}' width='12' align='left' />
			<col name='acn_facebook' title='${lbl:b_facebook}' width='12' align='left' />
			<col name='acn_linkedin' title='${lbl:b_linkedin}' width='12' align='left' />
			<col name='acn_twitter' title='${lbl:b_twitter}' width='12' align='left' />
			<col name='acn_swift' title='${lbl:b_swift_code}' width='12' align='left' />
			<col name='acn_fecha_registro' title='${lbl:b_store_date}' width='12' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>