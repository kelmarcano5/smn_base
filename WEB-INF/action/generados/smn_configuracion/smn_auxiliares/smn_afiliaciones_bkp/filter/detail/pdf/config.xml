<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_affiliations}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_affiliations}' width='60' spacingBefore='40'>
			<col name='afc_codigo' title='${lbl:b_code}' align='left' />
			<col name='afc_descripcion' title='${lbl:b_description}' align='left' />
			<col name='acf_auxiliar_persona_natural' title='${lbl:b_person_assistant}' align='left' format='######' />
			<col name='afc_modulo' title='${lbl:b_module}' align='left' format='######' />
			<col name='afc_es_titular_combo' title='${lbl:b_titular}' align='left' />
			<col name='afc_titular' title='${lbl:b_person_assistant}' align='left' format='######' />
			<col name='afc_parentezco' title='${lbl:b_relationship}' align='left' format='######' />
			<col name='afc_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>

	</pdf-report>
</config>