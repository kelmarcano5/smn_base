<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnauxiliarcondfinanciera.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_financial_condition}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='cfn_codigo' title='${lbl:b_code}'  align='center' />
		</record>
		<table recordset='query-smnauxiliarcondfinanciera.sql' width='100' spacingBefore='10'>
			<col name='cfn_codigo' title='${lbl:b_code}' width='10' align='left' />
			<col name='cfn_descripcion' title='${lbl:b_description}' width='10' align='left' />
			<col name='cfn_clase_auxiliar' title='${lbl:b_auxiliary_class}' width='10' align='left' format='######' />
			<col name='cfn_auxiliar_categoria' title='${lbl:b_auxiliary_category}' width='10' align='left' format='######' />
			<col name='cfn_limite_credito' title='${lbl:b_credit_limit}' width='10' align='left' format='#,###,##0.00' />
			<col name='cfn_porc_exceso_limite' title='${lbl:b_percent_credit_limit}' width='10' align='left' format='#,###,##0.00' />
			<col name='cfn_valida_saldos_vec_combo' title='${lbl:b_percent_credit_limit}' width='10' align='left' />
			<col name='cfn_dias_adic_saldos_venc' title='${lbl:b_validates_overcome_balances}' width='10' align='left' format='######' />
			<col name='cfn_num_cheques_devuel' title='${lbl:b_number_returned_checks}' width='10' align='left' format='######' />
			<col name='cfn_fecha_registro' title='${lbl:b_store_date}' width='10' align='left' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>