<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smntasasimpositivas.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_tax_rates}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='smn_unidades_impositivas_id_name' title='${lbl:b_tax_unit}'  align='center' />
			<col name='tim_fecha_vigencia_ini' title='${lbl:b_validation_date_from}'  format='dd-MM-yyyy' align='center' />
			<col name='tim_fecha_vigencia_fin' title='${lbl:b_validation_date_until}'  format='dd-MM-yyyy' align='center' />
		</record>
		<table recordset='query-smntasasimpositivas.sql' width='100' spacingBefore='10'>
			<col name='uim_codigo_pl0' title='${lbl:b_tax_unit}' width='25' align='left' />
			<col name='tim_fecha_vigencia' title='${lbl:b_validation_date}' width='25' align='center' format='dd-MM-yyyy' />
			<col name='tim_valor' title='${lbl:b_value}' width='25' align='right' format='#,###,##0.00' />
			<col name='tim_fecha_registro' title='${lbl:b_store_date}' width='25' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>