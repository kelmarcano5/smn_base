<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnestructuraorganizacional.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_organizational_structure}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='smn_configuracion_estructura_id_name' title='${lbl:b_structure_configuration}'  align='center' />
			<col name='eor_codigo' title='${lbl:b_code}'  align='center' />
			<col name='eor_nombre' title='${lbl:b_name}'  align='center' />
			<col name='eor_centro_costo' title='${lbl:b_cost_centers}'  format='######' align='center' />
			<col name='eor_clase_auxiliar' title='${lbl:b_auxiliary_class}'  format='######' align='center' />
			<col name='eor_auxiliar' title='${lbl:b_auxiliary}'  format='######' align='center' />
			<col name='eor_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='center' />
			<col name='eor_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='center' />
		</record>
		<table recordset='query-smnestructuraorganizacional.sql' width='100' spacingBefore='10'>
			<col name='smn_configuracion_estructura_id_combo' title='${lbl:b_structure_configuration}' width='14' align='left' format='######' />
			<col name='eor_codigo' title='${lbl:b_code}' width='14' align='left' />
			<col name='eor_nombre' title='${lbl:b_name}' width='14' align='left' />
			<col name='eor_centro_costo_combo' title='${lbl:b_cost_centers}' width='14' align='left' format='######' />
			<col name='eor_clase_auxiliar_combo' title='${lbl:b_auxiliary_class}' width='14' align='left' format='######' />
			<col name='eor_auxiliar_combo' title='${lbl:b_auxiliary}' width='14' align='left' format='######' />
			<col name='eor_fecha_registro' title='${lbl:b_store_date}' width='14' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>