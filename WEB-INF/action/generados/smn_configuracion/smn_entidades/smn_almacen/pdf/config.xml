<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnalmacen.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_stores}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<table recordset='query-smnalmacen.sql' width='100' spacingBefore='40'>
			<col name='alm_codigo' title='${lbl:b_code}' width='12' align='left' />
			<col name='alm_nombre' title='${lbl:b_name}' width='12' align='left' />
			<col name='alm_empresa' title='${lbl:b_entity}' width='12' align='left' format='######' />
			<col name='alm_unidad_negocio' title='${lbl:b_business_unit}' width='12' align='left' format='######' />
			<col name='alm_sucursal' title='${lbl:b_subsidiary}' width='12' align='left' format='######' />
			<col name='alm_area_servicio' title='${lbl:b_service_area}' width='12' align='left' format='######' />
			<col name='alm_unidad_servicio' title='${lbl:b_service_unit}' width='12' align='left' format='######' />
			<col name='alm_fecha_registro' title='${lbl:b_store_date}' width='12' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>