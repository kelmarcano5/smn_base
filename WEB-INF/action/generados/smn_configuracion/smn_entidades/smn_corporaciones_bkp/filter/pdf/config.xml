<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncorporaciones.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_corporations}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='crp_codigo' title='${lbl:b_code}'  align='center' />
			<col name='crp_nombre' title='${lbl:b_name}'  align='center' />
			<col name='crp_moneda' title='${lbl:b_coin}'  format='######' align='center' />
			<col name='crp_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='center' />
			<col name='crp_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='center' />
		</record>
		<table recordset='query-smncorporaciones.sql' width='100' spacingBefore='10'>
			<col name='crp_codigo' title='${lbl:b_code}' width='20' align='left' />
			<col name='crp_nombre' title='${lbl:b_name}' width='20' align='left' />
			<col name='crp_moneda' title='${lbl:b_coin}' width='20' align='left' format='######' />
			<col name='crp_direccion' title='${lbl:b_address}' width='20' align='left' format='######' />
			<col name='crp_fecha_registro' title='${lbl:b_store_date}' width='20' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>