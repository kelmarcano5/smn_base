<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnsucursales.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_subsidiaries}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='suc_empresa' title='${lbl:b_entity}'  format='######' align='center' />
		</record>
		<table recordset='query-smnsucursales.sql' width='100' spacingBefore='10'>
			<col name='suc_empresa' title='${lbl:b_entity}' width='9' align='left' format='######' />
			<col name='suc_codigo' title='${lbl:b_code}' width='9' align='left' />
			<col name='suc_nombre' title='${lbl:b_name}' width='9' align='left' />
			<col name='suc_unidad_negocio' title='${lbl:b_business_unit}' width='9' align='left' format='######' />
			<col name='suc_maneja_area_servicio_combo' title='${lbl:b_has_service_area}' width='9' align='left' />
			<col name='suc_responsable' title='${lbl:b_responsible}' width='9' align='left' />
			<col name='suc_direccion' title='${lbl:b_address}' width='9' align='left' format='######' />
			<col name='suc_telefono_fijo' title='${lbl:b_fixed_phone}' width='9' align='left' />
			<col name='suc_telefono_movil' title='${lbl:b_mobile_phone}' width='9' align='left' />
			<col name='suc_email' title='${lbl:s_profile_email}' width='9' align='left' />
			<col name='suc_fecha_registro' title='${lbl:b_store_date}' width='9' align='left' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>