<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnareasservicios.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_service_areas}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='smn_tipos_servicios_id_name' title='${lbl:b_service_type}'  align='center' />
			<col name='ase_codigo' title='${lbl:b_code}'  align='center' />
			<col name='ase_descripcion' title='${lbl:b_description}'  align='center' />
			<col name='ase_centro_costo' title='${lbl:b_cost_centers}'  format='######' align='center' />
			<col name='ase_fecha_registro_ini' title='${lbl:b_store_date_grater_than}'  format='dd-MM-yyyy' align='center' />
			<col name='ase_fecha_registro_fin' title='${lbl:b_store_date_less_than}'  format='dd-MM-yyyy' align='center' />
		</record>
		<table recordset='query-smnareasservicios.sql' width='100' spacingBefore='10'>
			<col name='tsr_codigo_pl0' title='${lbl:b_service_type}' width='20' align='left' />
			<col name='ase_codigo' title='${lbl:b_code}' width='20' align='left' />
			<col name='ase_descripcion' title='${lbl:b_description}' width='20' align='left' />
			<col name='ase_centro_costo' title='${lbl:b_cost_centers}' width='20' align='left' format='######' />
			<col name='ase_fecha_registro' title='${lbl:b_store_date}' width='20' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>