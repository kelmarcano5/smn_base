<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_service_areas}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_service_areas}' width='60' spacingBefore='40'>
			<col name='smn_tipos_servicios_id' title='${lbl:b_service_type}' align='left' format='######' />
			<col name='ase_codigo' title='${lbl:b_code}' align='left' />
			<col name='ase_descripcion' title='${lbl:b_description}' align='left' />
			<col name='ase_empresa' title='${lbl:b_entity}' align='left' format='######' />
			<col name='ase_sucursal' title='${lbl:b_subsidiary}' align='left' format='######' />
			<col name='ase_unidad_negocio' title='${lbl:b_business_unit}' align='left' format='######' />
			<col name='ase_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>

	</pdf-report>
</config>