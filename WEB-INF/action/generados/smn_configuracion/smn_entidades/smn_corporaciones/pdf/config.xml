<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncorporaciones.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_corporations}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<table recordset='query-smncorporaciones.sql' width='100' spacingBefore='40'>
			<col name='crp_codigo' title='${lbl:b_code}' width='16' align='left' />
			<col name='crp_nombre' title='${lbl:b_name}' width='16' align='left' />
			<col name='crp_unidad_negocio' title='${lbl:b_business_unit}' width='16' align='left' format='######' />
			<col name='crp_moneda' title='${lbl:b_coin}' width='16' align='left' format='######' />
			<col name='crp_direccion' title='${lbl:b_address}' width='16' align='left' format='######' />
			<col name='crp_fecha_registro' title='${lbl:b_store_date}' width='16' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>