<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncentrocosto.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_cost_centers}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='cco_codigo' title='${lbl:b_code}'  align='center' />
		</record>
		<table recordset='query-smncentrocosto.sql' width='100' spacingBefore='10'>
			<col name='cco_codigo' title='${lbl:b_code}' width='10' align='left' />
			<col name='cco_descripcion_corta' title='${lbl:b_short_description}' width='10' align='left' />
			<col name='cco_descripcion_larga' title='${lbl:b_long_description}' width='10' align='left' />
			<col name='cco_empresa' title='${lbl:b_entity}' width='10' align='left' format='######' />
			<col name='cco_sucursal' title='${lbl:b_subsidiary}' width='10' align='left' format='######' />
			<col name='cco_area_servicio' title='${lbl:b_service_area}' width='10' align='left' format='######' />
			<col name='cco_unidad_servicio' title='${lbl:b_service_unit}' width='10' align='left' format='######' />
			<col name='cco_almacen' title='${lbl:b_store}' width='10' align='left' format='######' />
			<col name='cco_nivel_combo' title='${lbl:b_level}' width='10' align='left' />
			<col name='cco_fecha_registro' title='${lbl:b_store_date}' width='10' align='left' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>